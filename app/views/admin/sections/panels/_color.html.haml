#section-color-panel
  = bootstrap_form_for [:modify, :admin, section], remote: true, html: {id: dom_id(section, :colors)} do |f|
    %fieldset
      = f.text_field :background_color, class: 'input-sm color'
      = f.text_field :gradient_color, class: 'input-sm color'
  = bootstrap_form_for [:modify, :admin, section], remote: true, html: {id: 'section-color-form', class: 'immediate'} do |f|
    %fieldset
      = f.select :gradient_type, Section.gradient_type_options, {include_blank: true}, {placeholder: t('.solid_color'), class: 'input-sm'}
      = f.select :gradient_direction, Section.gradient_direction_options, {include_blank: true}, {placeholder: t('.gradient_center'), class: 'input-sm'}
      = f.range_field :gradient_balance, min: -100, max: 100, class: 'input-sm'

  :coffee
    $('#section_gradient_type').betterSelectize
      dropdownParent: null
    $('#section_gradient_direction').betterSelectize
      dropdownParent: null

    $form = $('##{dom_id(section, :colors)}')
    $form.find('.color').minicolors
      theme: 'bootstrap'
      position: 'bottom left'
      format: 'rgb'
      opacity: true
      keywords: 'transparent'
      swatches: ['rgba(255,255,255,1)', 'rgba(0,0,0,1)', 'rgba(255,255,255,0)']
      change: (value) ->
        $form.trigger 'submit.rails'
      changeDelay: 500
