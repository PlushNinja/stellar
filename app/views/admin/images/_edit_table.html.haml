.table-responsive
  %table.table.table-striped.table-hover.table-loose
    %thead
      %tr
        %th.col-xs-5 Image
        %th.col-xs-6 Image type
        %th

    %tbody#images.sortable
      = render partial: 'admin/images/edit_row', collection: imageable.images, as: :image

:coffee
  $('.sortable').sortable(
    items: 'tr'
    placeholder: '#{tr_placeholder(3)}'
  ).bind 'sortupdate', (e, ui) ->
    $.post '#{admin_reorder_images_path}',
      {reorder: $('tr', this).map(-> this.id).get()}
