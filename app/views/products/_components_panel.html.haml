#tab-component-entries.tab-pane.fade
  .table-scroller.table-responsive
    %table.table.table-condensed.components
      = content_tag_for :tr, product.component_entries.live do |entry|
        %td
          .box-icon= image_variant_tag entry.component.cover_image, :icon
        %th
          %strong= entry.component.title
          = entry.component.subtitle
        %td.text-right= entry.quantity
