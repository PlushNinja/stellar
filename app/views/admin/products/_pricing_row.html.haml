%tr[product]{class: product.live? || 'warning text-warning'}
  %td
    .product
      %strong= product.title
      %span.small= product.subtitle
      .badge= product.code
  %td
    = form_for [:set_price, :admin, product], remote: true, html: {class: 'pull-right immediate'} do |f|
      = hidden_field_tag :group_id, @group && @group.id
      .input-group.input-group-sm
        = f.text_field :trade_price, class: 'form-control text-right', placeholder: humanized_money(product.trade_price), tabindex: 1
        %span.input-group-addon €
  %td
    = form_for [:set_price, :admin, product], remote: true, html: {class: 'pull-right immediate'} do |f|
      = hidden_field_tag :group_id, @group && @group.id
      .input-group.input-group-sm
        = f.text_field :retail_price, class: 'form-control text-right', placeholder: humanized_money(product.retail_price), tabindex: 2
        %span.input-group-addon €
  - if @group.present?
    %td
      = form_for [:admin, product, product.alternate_prices.where(group: @group).first_or_initialize], remote: true, html: {class: 'pull-right immediate'} do |f|
        = f.hidden_field :group_id, value: @group.id
        .input-group.input-group-sm
          = f.text_field :price, class: 'form-control text-right', placeholder: humanized_money(product.send(@group.price_method))
          %span.input-group-addon €
