.quick-edit-panel
  .panel.panel-primary
    .panel-heading
      .pull-right
        .panel-error-indicator= icon('warning')
      %h4.panel-title
        = t('.add_order_items')
    .panel-body
      %fieldset#admin-barcode-panel.bg-info
        .form-group
          .input-group.input-group-lg
            %span.input-group-addon= icon('barcode')
            = text_field_tag 'barcode', nil, class: 'form-control monospace'
        .form-group
          = select_tag 'categories', options_for_select(current_group.category_options), multiple: true, placeholder: col(Product, :category_ids)
      = render partial: 'admin/order_items/new', object: order, as: :order

:coffee
  $('#barcode').switchboard
    callbacks:
      'GS1-128': (data) ->
        $('#barcode').val(data).select().effect 'highlight'

  $('#categories').selectize
    plugins: ['remove_button']
    dropdownParent: 'body'
    allowEmptyOption: true
    onChange: (id) ->
      $('#order_item_product_id')[0].selectize.clearOptions()
