!!!
%html
  %head
    = render partial: 'shared/metadata'
    = render partial: 'shared/cookieconsent'
    = render partial: 'favicon'
  %body{class: current_theme}
    #offcanvas-wrap
      %nav#offcanvas.offcanvas.navmenu.navmenu-default.navmenu-fixed-left{role: 'navigation'}
        = render partial: 'portal/offcanvas'
      #canvas-wrap
        %nav#main-nav.navbar.navbar-default.navbar-fixed-top{role: 'navigation'}
          .container
            %button.offcanvas-toggle{type: 'button', data: {toggle: 'offcanvas', target: '#offcanvas', canvas: '#offcanvas-wrap'}}
              = icon('bars', class: 'fa-lg')
            .navbar-header
              = link_to branding(current_portal), root_path, class: 'navbar-brand'
            %ul.nav.navbar-nav.responsive
              %li.dropdown
                %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
                  = icon('umbrella', title(Department, count: 2), class: 'fa-lg')
                  %span.caret
                %ul.dropdown-menu{role: 'menu'}
                  = render partial: 'department_menu'
              %li.dropdown
                %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
                  = icon('shopping-bag', title(Store, count: 2), class: 'fa-lg')
                  %span.caret
                %ul.dropdown-menu{role: 'menu'}
                  = render partial: 'store_menu'
              = render partial: 'keyword_search'

        = yield

    %footer.footer
      = render partial: 'shared/footer'

    = render partial: 'shared/outdated_browser'
