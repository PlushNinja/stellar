= bootstrap_form_for [:admin, @page], layout: :horizontal,
    label_col: 'col-sm-2', control_col: 'col-sm-4' do |f|
  .panel.panel-default
    .panel-body
      %fieldset{disabled: locked}
        = f.select :purpose, Page.purpose_options, {}, {disabled: locked || !@page.new_record?, class: 'selectize'}
        = f.text_field :title, required: true
        - unless @page.new_record?
          = render partial: "admin/#{@page.to_partial_path}", locals: {f: f}
          - if @page.can_have_albums?
            = f.select :album_ids, current_store.album_options, {}, {multiple: true, class: 'selectize'}

      %fieldset.actions
        = f.form_group do
          = f.primary
