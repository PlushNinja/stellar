/*
 * Theme specific styles
 */

$navbar-inverse-bg: #373737;
$navbar-inverse-color: #aaa;
$navbar-inverse-link-color: #ddd;
$navbar-inverse-toggle-hover-bg: #fff;
$navbar-inverse-toggle-border-color: #aaa;

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

body {
  overflow-y: scroll;
  padding-top: 50px;
}

.penumbra {
  background-image: url(<%= asset_path('bokeh-3.jpg') %>);
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-size: cover;
}

#main-nav {
  @extend .navbar-inverse;
  @include box-shadow(0 1px 10px 0 rgba(0,0,0,.666));

  > .content {
    @extend .container;
  }

  .navbar-toggle {
    color: $navbar-inverse-link-color;
  }
}

#static-wrap {
  .container {
    margin-top: 20px;

    > .page-header { margin-top: 0; }
  }
}

#categories-wrap {
  position: relative;
  background-color: rgba(255,255,255, 0.667);

  .categories {
    @extend .container-fluid;
    padding-top: 10px;

    > ul {
      display: flex;
      flex-flow: row wrap;
      justify-content: center;
      list-style: none;
      padding-left: 0;

      > li.category {
        @extend .col-xs-4, .col-sm-3, .col-md-2, .col-lg-1;
        position: static; // override relation position set above
        float: left;
        max-width: 200px;
        padding-left: 5px;
        padding-right: 5px;

        &.active {
          > a p { @extend .btn-primary; }
          > .subcategories-wrap { display: block; }
        }
        &:hover a img { transform: scale(1.10); }
        > a {
          display: block;
          position: relative;
          padding: 0 0 20px;
          text-decoration: none;
          color: inherit;

          img {
            @extend .img-responsive;
            transition: all 0.6s ease-in-out 0s;
          }
          p {
            @extend .btn, .btn-xs;
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            white-space: normal;
            font-weight: 500;
            line-height: 1.2;
            letter-spacing: -0.01em;
            transition: all 0.2s ease-in-out 0s;
          }
        }
        .subcategories-wrap {
          display: none;
          position: absolute;
          left: 0;
          right: 0;
          bottom: 0;
          background-color: rgba(0,0,0, 0.4);

          .subcategories {
            @extend .container;
            padding-top: 5px;
            padding-bottom: 5px;

            > ul {
              list-style: none;
              padding-left: 0;

              > li.category {
                float: left;

                &.active a p { @extend .btn-default; }
                a {
                  display: block;
                  padding: 0;
                  text-decoration: none;

                  img { display: none; }
                  p {
                    @extend .btn-sm;
                    margin-bottom: 0;
                    color: #fff;
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

#products-wrap {
  position: relative;

  .products {
    @extend .container;
    position: relative;
    margin-top: 40px;

    .product-grid {
      @extend .row;

      ul {
        display: flex;
        flex-wrap: wrap;
        align-content: flex-start;
        align-items: flex-end;
        list-style: none;
        padding-left: 0;

        li.product {
          @extend .col-xs-6, .col-sm-4, .col-md-3;
          position: relative;
          transition: all 0.2s ease-in-out 0s;

          a {
            @extend .thumbnail;
            display: block;
            padding: 10px 10px 40px;
            background-color: #fff;
            border-radius: $border-radius-base;

            &:hover {
              @include box-shadow(0 0 1px 2px $brand-primary);
              text-decoration: none;
            }
            .product-image {
              position: relative;
              overflow: hidden;
              width: 100%;
              height: 0;
              padding-bottom: 100%;

              img { @extend .img-contain, .img-center; }
            }
            .product-text {
              overflow: hidden;
              text-align: center;

              h3 {
                margin-top: 10px;
                margin-bottom: 10px;
                font-size: 17px;
                letter-spacing: -0.01em;

                .small {
                  display: block;
                  font-size: 14px;
                }
              }
              .description { display: none; }
            }
            .promotion { text-align: center; }
          }
          .buy-now {
            position: absolute;
            bottom: 30px;
            left: 25px;
            right: 25px;
            display: flex;
            justify-content: center;

            form {
              flex: 0 0 auto;

              button {
                @extend .btn-default;
                @include border-left-radius(0);
                height: 30px;
                margin-left: -2px;
                border-left-width: 0;
                border-color: $brand-primary;
              }
            }
            p {
              @extend .label, .label-primary;
              flex: 0 0 auto;
              font-size: 1em;
              line-height: 23px;
              margin-bottom: 0;
            }
          }
        }
      }
    }
  }
}

#product-detail-wrap {
  @include gradient-horizontal(rgba(255,255,255,1), rgba(255,255,255,0));

  .product-detail {
    @extend .container;
    position: relative;
    padding-top: 40px;
    padding-bottom: 40px;

    .product-header {
      .actions {
        @extend .pull-right;

        .btn { display: inline-block; }
      }
      .product-title {
        margin-top: 0;
        margin-bottom: 20px;
        font-weight: 500;
      }
    }
    .product-body {
      @extend .row;

      .images.presentational {
        @extend .col-xs-12, .col-sm-7, .col-md-8, .col-lg-9;
        margin-bottom: 30px;
      }
      .product-meta {
        @extend .col-xs-12, .col-sm-5, .col-md-4, .col-lg-3;

        .product-code {
          font-size: $font-size-small;
        }
        .buy-now {
          @extend .well;

          .product-pricing {
            .price {
              @extend .lead, .text-primary;
              margin-right: 0.5em;
              margin-bottom: 0;
              font-weight: 500;

              .tax-rate, .unit-price {
                @extend .text-muted;
                display: inline-block;
                font-size: $font-size-base;
                font-weight: 400;
              }
              .unit-price { display: block; }
            }
            .retail-price {
              text-decoration: line-through;
            }
          }
          form {
            .form-group {
              margin-top: 20px;

              button {
                @extend .btn-block, .btn-lg, .btn-success;
                transition: all 0.2s ease-in-out 0s;
              }
            }
          }
          .go-checkout .btn {
            @extend .btn-block, .btn-lg;
            transition: all 0.2s ease-in-out 0s;
          }
        }
        .variant-products {
          margin-bottom: 20px;

          button { @extend .btn-block; }
          .dropdown-menu {
            @extend .dropdown-menu-right;
          }
        }
        .product-stock {
          ul {
            font-size: $font-size-small;

            > li > span { @extend .badge; }
          }
        }
      }
      .product-description {
        @extend .col-xs-12, .col-sm-5, .col-md-6, .col-lg-5;

        .body-text { margin-bottom: 20px; }
      }
      .product-properties {
        @extend .col-xs-12, .col-sm-6, .col-md-6, .col-lg-4;

        .properties, .components {
          tr > :last-child { padding-right: 10px; }
        }
      }
      .images.technical {
        @extend .col-xs-12, .col-sm-6, .col-md-6, .col-lg-3;
      }
      .iframes {}
      .images {
        .nav { @extend .nav-tabs, .nav-sm; }
        .image {
          position: relative;
          height: 0;
          padding-bottom: 61.8%; // golden ratio

          > a.image-link {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;

            img {
              display: block;
              max-width: 100%;
              max-height: 100%;
              width: auto;
              height: auto;
              margin: 0 auto;
            }
          }
        }
      }
    }
  }
}

.footer {
  > .content {
    @extend .container;
  }
}

@media print {
  #products-wrap {
    .products {
      .product-grid {
        margin: 0;
        padding: 0;

        ul {
          display: block;

          li.product {
            display: block;
            width: 100%;
            max-width: 100%;
            padding: 10px 0;
            border-top: 1px solid #eee;
            page-break-inside: avoid;
            break-inside: avoid;

            &:first-child { border-top: 0; }

            a {
              display: block;
              padding: 0;
              border: 0;

              &:after {
                content: '';
                display: table;
                clear: both;
              }

              .product-image {
                float: left;
                width: 200px;
                height: 200px;
                padding: 0;

                img {
                  position: static;
                  display: block;
                  max-width: 100%;
                  max-height: 100%;
                  width: auto;
                  height: auto;
                  transform: none;
                  margin: 0 auto;
                }
              }
              .product-text {
                margin-left: 220px;
                text-align: left;

                .description { display: block; }
              }
              .promotion { display: none; }
            }
            .buy-now { display: none; }
          }
        }
      }
    }
  }
}
