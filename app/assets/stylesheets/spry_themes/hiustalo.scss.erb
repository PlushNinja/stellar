/*
 * Theme specific styles
 */

$brand-primary: #e6172b;

@import "bootstrap-generators.scss";
@import "bootstrap-font-awesome.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

.hiustalo {
  padding-top: $navbar-height + 4;
  overflow-y: scroll;
  background-image: url(<%= asset_path('hiustalo-bg.jpg') %>);
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-size: cover;

  #main-nav {
    @include box-shadow(0 6px 24px 0 rgba(0,0,0,0.333));
    background: rgba(255,255,255,0.88);
    border-top: 4px solid #000;
  }
  #main {
    background: transparent;
    @include gradient-vertical(rgba(255,255,255,1), rgba(255,255,255,0));
  }

  .container {
    margin-left: 0;
    margin-right: 0;
    padding-left: $grid-gutter-width;
    padding-right: $grid-gutter-width;
    width: auto;
  }

  ul.categories {
    @extend .row;
    list-style: none;
    margin-bottom: 20px;
    padding: 20px 0 0;

    li.category {
      @extend .col-xs-2;
      min-width: 240px;
      margin-bottom: 15px;

      &.active a {
        @extend .btn-primary;
      }
      a {
        @extend .btn, .btn-default;
        width: 100%;
        outline: 0 !important;
        transition: all 0.2s ease-in-out 0s;

        img { display: none; }
        p { margin: 0; }
      }
    }
  }

  ul.products {
    list-style: none;
    padding: 0;

    li.product {
      @include box-shadow(0 0 3px 0 rgba(0,0,0,0.666));
      position: absolute;
      background: #fff;
      width: 200px;
      padding: $grid-gutter-width/2;
      padding-bottom: 0;
      margin-bottom: $grid-gutter-width/2;
      transition: all 0.2s ease-in-out 0s;

      &:hover {
        @include box-shadow(0 0 6px 0 rgba(0,0,0,0.333));
        transform: scale(1.02);

        a {
          text-decoration: none;
        }
      }
      a {
        display: block;

        img {
          display: block;
          margin: 0 auto;
        }
        h3 {
          font-size: $font-size-base;
          margin-top: 0.5em;
          margin-bottom: 0.5em;

          .small {
            display: block;
            font-size: $font-size-small;
          }
        }
        .description {
          position: relative;
          font-size: $font-size-small - 2;
          color: $text-color;
          max-height: 50px;
          overflow: hidden;

          &:after {
            @include gradient-vertical(rgba(255,255,255,0), rgba(255,255,255,1));
            content: "";
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            height: 30px;
          }
        }
      }
      .buy-now {
        @extend .row;
        position: relative;
        height: 40px;
        padding: 10px;
        background: $gray-dark;

        p {
          margin: 0 0 0 $grid-gutter-width;
          color: #fff;
          font-weight: 500;
        }
        .form-inline {
          position: absolute;
          left: 10px;
          top: 10px;
          padding: 0;

          button {
            @extend .btn-xs, .btn-default;
          }
        }
      }
    }
  }

  .product-detail {
    @extend .row;

    .product-header {
      @extend .col-xs-12;
      @extend .col-sm-10, .col-sm-offset-1;
      @extend .col-lg-8, .col-lg-offset-2;

      .product-actions {
        @extend .text-right;
        position: absolute;
        right: 15px;
        top: 78px;
        z-index: 3;

        .form-inline {
          display: inline-block;
        }
      }
      .product-title {
        @extend .col-xs-12;
        margin: 10px 0;
        height: 40px;
        overflow: hidden;
      }
    }
    .product-body {
      @extend .col-xs-12;
      @extend .col-sm-10, .col-sm-offset-1;
      @extend .col-lg-8, .col-lg-offset-2;
      @include box-shadow(0 0 3px 0 rgba(0,0,0,0.666));
      border-top: 3px solid #000;
      background: #fff;
      padding-top: 15px;
      padding-bottom: 15px;

      .product-description {
        @extend .col-sm-6, .col-sm-push-6;
        @extend .col-xs-12;

        .product-stock { display: none; }
        .body-text {
          margin-top: 50px;
        }
        .product-pricing {
          position: absolute;
          top: 0;
          left: $grid-gutter-width/2;
          @extend .lead;
          @extend .text-primary;
        }
        .product-code {
          @extend .text-right;
          font-size: 90%;
        }
      }
      .images {
        position: relative;
        padding-bottom: 60px;

        &.technical { display: none; }
        &.presentational {
          @extend .col-sm-6, .col-sm-pull-6;
          @extend .col-xs-12;
        }
        .nav {
          @extend .hidden-print;
          position: absolute;
          left: $grid-gutter-width/2;
          bottom: 0;
        }
        .tab-content {
          .image {
            a {
              display: block;

              img {
                @extend .img-responsive;

                &:hover {
                  @include box-shadow(0 0 8px $link-color);
                }
              }
            }
            &:not(:first-child) {
              @extend .hidden-print;
            }
          }
        }
      }
    }
  }
}

.table tbody {
  background: #fff;
}

.footer {
  background: $brand-primary;
  color: lighten($brand-primary, 40%);
}
