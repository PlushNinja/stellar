- pictures = product.pictures.send(purpose)

.gallery.swiper-container{class: purpose}
  .swiper-wrapper
    - pictures.each_with_index do |picture, index|
      .swiper-slide[picture]
        = link_to picture.image.url(:lightbox, timestamp: false), class: 'image-link' do
          = picture_variant_tag picture, purpose

  - if pictures.count > 1
    .image-pagination

    :coffee
      jQuery ->
        $gallery = $('.gallery.#{purpose}')
        new Swiper $gallery,
          pagination:
            el: '.image-pagination'
            clickable: true
