%tr[inventory_check_item]{class: inventory_check_item.appearance}
  %td= product_header inventory_check_item
  %td= inventory_check_item.lot_code
  %td.text-right
    - if inventory_check_item.stocked?
      = inventory_check_item.on_hand
  %td.control
    = form_for [:admin, inventory_check_item], remote: true,
        html: {class: 'pull-right immediate'} do |f|
      = f.number_field :current, min: 0, max: 999, class: 'form-control text-right', tabindex: 1
  %td.actions
    = link_to icon('remove'), admin_inventory_check_item_path(inventory_check_item), remote: true, method: :delete, class: 'btn btn-outline-danger btn-sm'
