.page-header
  = link_to admin_albums_path, class: 'btn btn-default' do
    = icon('chevron-circle-left', t('actions.back'))
  - if current_user.can_update?(@album, at: current_store)
    = link_to edit_admin_album_path(@album), class: 'btn btn-primary' do
      = icon('pencil-square', t('actions.edit'))
  %h1
    = picture_variant_tag @album.cover_picture
    = @album

.row
  .col-md-6
    = render partial: 'form', locals: {locked: true}

  .col-md-6
    = render partial: 'admin/pictures/collection', object: @album, as: :pictureable
