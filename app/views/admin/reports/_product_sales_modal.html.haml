.modal-dialog.modal-lg
  .modal-content
    .modal-header
      %button.close{data: {dismiss: 'modal'}}= icon('close')
      %h4.modal-title
        = @product.title
        .small
          = @product.subtitle
    .modal-body
      = render partial: 'admin/reports/product_sales_table', object: @order_items, as: :order_items
