%ul.nav.navbar-nav
  = active_link_to icon('cubes', 'Store'), store_path, wrap_tag: :li
  - if current_user.can?(:has_dashboard)
    = active_link_to icon('tachometer', 'Dashboard'), admin_dashboard_path, wrap_tag: :li
  - if current_user.can_read?(Order)
    = active_link_to icon('truck', 'Orders'), admin_orders_path, wrap_tag: :li
  %li.dropdown
    %a.dropdown-toggle{href: '#', role: 'button', 'aria-expanded' => 'false', data: {toggle: 'dropdown'}}
      Manage
      %span.caret
      %ul.dropdown-menu{role: 'menu'}
        - if current_user.can_read?(Product)
          = active_link_to icon('cube', 'Products'), admin_products_path, wrap_tag: :li
        - if current_user.can_read?(Category)
          = active_link_to icon('sitemap', 'Categories'), admin_categories_path, wrap_tag: :li
        - if current_user.can_read?(Page)
          = active_link_to icon('files-o', 'Pages'), admin_pages_path, wrap_tag: :li
        - if current_user.can_read?(User)
          = active_link_to icon('users', 'Users'), admin_users_path, wrap_tag: :li
        - if current_user.can_read?(Store)
          = active_link_to icon('cubes', 'Stores'), admin_stores_path, wrap_tag: :li
  %p.navbar-text
    %span.label.label-warning= Rails.env if Rails.env == 'development'
