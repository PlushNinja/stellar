#barcode-panel
  .container
    .row
      .col-xs-12.col-md-10.col-md-offset-1.col-lg-8.col-lg-offset-2
        .form-group
          .input-group.input-group-lg.input-group-round
            %span.input-group-addon= icon('barcode')
            = text_field_tag 'ean', nil, class: 'form-control'

#static-wrap.layout-container
  .container
    .row
      .col-xs-12.col-md-10.col-md-offset-1.col-lg-8.col-lg-offset-2
        #error-indicator
          = icon('warning')
        = render partial: 'pos/order_items/new', object: @order, as: :order
        .panel.panel-default
          = render partial: 'pos/cart_contents', object: @order, as: :order

:coffee
  $('#ean').focus()
