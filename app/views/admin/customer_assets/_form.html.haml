= bootstrap_form_for [:admin, @customer_asset], layout: :horizontal,
    label_col: 'col-sm-4', control_col: 'col-sm-8' do |f|
  .panel.panel-default
    .panel-body
      %fieldset{disabled: locked}
        = f.select :product_id, [], {include_blank: true}, {placeholder: t('actions.query'), class: 'selectize-tall'}
        = f.select :user_id, current_store.users.non_guest.map { |u| [u.to_s, u.id] }, {include_blank: true}, {class: 'selectize'}
      - unless locked
        %fieldset.actions
          = f.form_group do
            = f.primary

:coffee
  $('#customer_asset_product_id').selectize
    dropdownParent: 'body'
    valueField: 'id'
    sortField: [{field: 'title'}, {field: 'subtitle'}]
    searchField: ['title', 'subtitle']
    diacritics: false
    render: $.fn.selectize.renderers
    load: (query, callback) ->
      return callback() unless query
      $.ajax
        url: '#{query_admin_products_path}'
        type: 'GET'
        dataType: 'json'
        data:
          q: query
        error: ->
          callback()
        success: (response) ->
          callback(response)
