= bootstrap_form_for [:admin, @portal], layout: :horizontal,
    label_col: 'col-sm-4', control_col: 'col-sm-8' do |f|
  .panel.panel-default
    .panel-body
      %fieldset{disabled: locked}
        = f.text_field :name, required: true
        = f.text_field :domain, required: true, prepend: 'https://'
        = f.select :locale, Store.locale_options, {}, {class: 'selectize'}
        = f.select :theme, Store.theme_options, {}, {class: 'selectize'}
      - unless locked
        %fieldset.actions
          = f.form_group do
            = f.primary
