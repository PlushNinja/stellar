.page-header
  = link_to admin_pricing_groups_path, class: 'btn btn-default' do
    = icon('chevron-circle-left', t('actions.back'))
  - if current_user.can_update?(@pricing_group, at: current_store)
    = link_to edit_admin_pricing_group_path(@pricing_group), class: 'btn btn-primary' do
      = icon('pencil-square', t('actions.edit'))
  %h1= icon('shopping-basket', @pricing_group)

.row
  .col-md-6
    = render partial: 'form', locals: {locked: true}
