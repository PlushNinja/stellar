.page-header
  = link_to admin_subscriptions_path, class: 'btn btn-default' do
    = icon('chevron-circle-left', t('actions.back'))
  %h1
    = icon('ticket', t('.new_subscription'))

#subscription-panel.collapse
  .row
    .col-sm-5.col-lg-4
      .panel.panel-default
        .panel-body
          #selected-plan
    .col-sm-7.col-lg-4
      .panel.panel-default
        .panel-heading
          %h4.panel-title= t('.subscription_info')
        .panel-body
          = render partial: 'form'
    .col-sm-7.col-sm-offset-5.col-lg-4.col-lg-offset-0
      .panel.panel-default
        .panel-heading
          %h4.panel-title= t('.credit_card_payment')
        .panel-body
          = render partial: 'payment_form'
  %hr

= render partial: 'admin/plans/selector'

= stripe_javascript_tag
