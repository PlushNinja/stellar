%ul.nav.navbar-nav.navbar-right
  - if user_signed_in? && !current_user.is_guest?
    %li.dropdown
      %a.dropdown-toggle{href: '#', role: 'button', 'aria-expanded' => 'false', data: {toggle: 'dropdown'}}
        = current_user.name
        %span.caret
        %ul.dropdown-menu{role: 'menu'}
          %li= link_to icon('sign-out', 'Sign out'), destroy_user_session_path, method: :delete
  - else
    %li= link_to icon('sign-in', 'Sign in'), new_user_session_path
