.segment[segment]{style: segment_style(segment), data: {id: segment.id, dragdroppable: true, dragdrop_url: switch_admin_segment_path(segment)}}
  .segment-shape{class: [segment.shape, segment.fixed_ratio? && 'fixed-ratio']}
    .segment-content-wrap{class: [segment.alignment, segment.inset]}
      = render partial: segment.to_partial_path, object: segment, locals: {context: :layout}
      = render partial: 'admin/segments/segment_overlay', object: segment, as: :segment
  = render partial: 'admin/segments/segment_nav', object: segment, as: :segment
