= bootstrap_form_for [:admin, @pricing_group], layout: :horizontal,
    label_col: 'col-sm-4', control_col: 'col-sm-8' do |f|
  .panel.panel-default
    .panel-body
      %fieldset{disabled: locked}
        = f.text_field :name, required: true
        = f.number_field :markup_percent, step: 0.01, required: true, help: t('.markup_percent_help')
      - unless locked
        %fieldset.actions
          = f.form_group do
            = f.primary
