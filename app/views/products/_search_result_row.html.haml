- cache_if current_user.guest?, [I18n.locale, :search_result_row, product] do
  = content_tag_for :tr, product do
    %td.product-image
      .box-thumbnail
        = image_variant_tag product.cover_image(current_store.list_image_type), :thumbnail
    %td.product-title
      = link_to show_product_path(product.category, product) do
        %strong= product.title
        = product.subtitle
      .small= product.code
    %td= property_string(product.searchable_product_properties)
    - if can_see_pricing?
      %td.price.currency.text-right
        = humanized_money_with_symbol product.price_tag(current_pricing)
