.page-header
  = link_to admin_products_path, class: 'btn btn-default' do
    = icon('chevron-circle-left', t('actions.back'))
  %h1= icon('tag', col(Product, :pricing))

= render partial: 'search', locals: {url: pricing_admin_products_path}
