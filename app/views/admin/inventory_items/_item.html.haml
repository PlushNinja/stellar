#inventory-item.panel.panel-default
  .panel-body
    = bootstrap_form_for [:admin, inventory_item] do |f|
      %fieldset{disabled: true}
        = f.text_field :code
        = f.text_field :expires_at
        = f.text_field :inventory_id, value: inventory_item.inventory
        = f.text_field :on_hand
        = f.text_field :reserved
        = f.text_field :pending
        = f.text_field :value
        = f.text_field :total_value
