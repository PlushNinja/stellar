%h1
  = Order.model_name.human.capitalize
  %span.small= @order.to_s
%hr

%dl
  %dt= Order.human_attribute_name(:company_name)
  %dd= @order.company_name
  %dt= Order.human_attribute_name(:contact_person)
  %dd= @order.contact_person
  #shipping-info.collapse{class: @order.has_shipping? ? 'in' : ''}
    %dt= Order.human_attribute_name(:shipping_at)
    %dd= l(@order.shipping_at)
    %dt= Order.human_attribute_name(:billing_address)
    %dd= @order.billing_address
    %dt
    %dd= @order.billing_postalcode
    %dt
    %dd= @order.billing_city
    %dt= Order.human_attribute_name(:shipping_address)
    %dd= @order.shipping_address
    %dt
    %dd= @order.shipping_postalcode
    %dt
    %dd= @order.shipping_city
  %dt= Order.human_attribute_name(:notes)
  %dd= simple_format(@order.notes)
%hr

%table.table
  %thead
    %tr
      %th.col-xs-2= OrderItem.human_attribute_name(:product_code)
      %th= OrderItem.human_attribute_name(:product_title)
      %th.text-right= OrderItem.human_attribute_name(:amount)
      %th.col-xs-1.text-right à
      %th.col-xs-1.text-right= OrderItem.human_attribute_name(:subtotal)
  %tfoot
    %tr
      %th{colspan: 3}
      %th.text-right= Order.human_attribute_name(:grand_total)
      %th.text-right= number_to_currency(@order.grand_total, unit: '€')
  %tbody
    - @order.order_items.each do |order_item|
      = content_tag_for :tr, order_item do
        %td= order_item.product.code
        %td
          %strong= order_item.product.title
          = order_item.product.subtitle
        %td.text-right= order_item.amount
        %td.text-right= number_to_currency(order_item.product.sales_price, unit: '€')
        %td.text-right= number_to_currency(order_item.subtotal, unit: '€')
