- origin = current_store.shipping_origin
- destination = @shipping_gateway.distance_lookup(origin, I18n.locale)

.truckload-error.alert.alert-danger{style: 'display: none;'}
  = icon('warning', t('.lookup_error'))

- if destination.present?
  %dl.dl-horizontal
    %dt= t('.distance')
    %dd= destination['distance']['text']
    %dt= t('.loads')
    %dd= 1
  = form_tag ship_path(@order, @shipping_method), remote: true, id: 'truckload-form' do
    = hidden_field_tag :metadata, destination
    .ship-button.hidden-print
      = button_tag t('checkout.ship'), class: 'btn btn-block btn-lg btn-primary'

- else
  :coffee
    $('.truckload-error').show()
