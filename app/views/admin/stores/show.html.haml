.page-header
  = link_to admin_stores_path, class: 'btn btn-default' do
    = icon('chevron-circle-left', 'Back')
  - if current_user.can_update?(Store)
    = link_to edit_admin_store_path(@store), class: 'btn btn-primary' do
      = icon('pencil-square', 'Edit')
  %h1
    = image_variant_tag(@store.cover_image)
    = @store

.row
  .col-md-6
    .panel.panel-default
      .panel-body.form-horizontal
        .form-group
          %label.col-sm-4.control-label Contact person
          .col-sm-8
            %p.form-control-static= @store.contact_person.name
        .form-group
          %label.col-sm-4.control-label ERP number
          .col-sm-8
            %p.form-control-static= @store.erp_number
        .form-group
          %label.col-sm-4.control-label Name
          .col-sm-8
            %p.form-control-static= @store.name
        .form-group
          %label.col-sm-4.control-label Semantic name
          .col-sm-8
            %p.form-control-static= @store.slug
        .form-group
          %label.col-sm-4.control-label Theme
          .col-sm-8
            %p.form-control-static= @store.theme

  .col-md-6
    = render partial: 'admin/images/table', object: @store, as: :imageable
