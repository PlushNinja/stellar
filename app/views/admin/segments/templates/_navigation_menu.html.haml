%fieldset
  = f.hidden_field :resource_type, value: 'Page'
  = f.select :resource_id, Page.options_for_select(current_store.pages.container) { |p, l| [indent(p.to_s, l), p.id] }, {include_blank: t('.select_page')}
  .form-group
    = f.label col(Segment, :inverse), class: 'control-label'
    .btn-group{data: {toggle: 'buttons'}}
      %label.btn.btn-default{class: segment.inverse? || 'active'}
        = f.radio_button_without_bootstrap :inverse, 0
        = icon('sticky-note-o')
      %label.btn.btn-default{class: segment.inverse? && 'active'}
        = f.radio_button_without_bootstrap :inverse, 1
        = icon('sticky-note')
  = f.text_field :header

:coffee
  $('#segment_resource_id').betterSelectize()
