.page-header
  = link_to admin_products_path, class: 'btn btn-default' do
    = icon('chevron-circle-left')
    Back
  = link_to admin_product_path(@product), class: 'btn btn-primary' do
    = icon('info-circle')
    Show
  %h1
    Product
    %span.small= @product.to_s

.row
  .col-sm-6
    = render 'form'

  .col-sm-6
    = form_for [:admin, @product, Image.new],
        html: {multipart: true, class: 'dropzone well'} do |f|
      .fallback
        = f.hidden_field :image_type_id
        = f.file_field :attachment
        = f.submit class: 'btn btn-primary'
      :javascript
        Dropzone.options.newImage = {
          paramName: 'image[attachment]',
          success: function(file, image) {
            $.get("/admin/images/" + image['id']);
          }
        }
    #product-images.list-group.gallery
      = render partial: 'admin/images/edit_image', collection: @product.images, as: :image
