.table-responsive
  %table.table.table-striped.table-hover.table-loose
    %thead
      %tr
        %th.col-xs-2= col(AssetEntry, :recorded_at)
        %th.col-xs-2= col(AssetEntry, :source_id)
        %th.col-xs-2.text-right= col(AssetEntry, :amount)
        %th.hidden.text-right= col(AssetEntry, :value)
        %th= col(AssetEntry, :note)
        %th.actions

    %tbody#asset-entries-tbody
      = render partial: 'admin/asset_entries/edit_tbody', object: @customer_asset, as: :customer_asset

.table-responsive
  = form_for [:admin, customer_asset, customer_asset.asset_entries.build(recorded_at: Date.today, amount: 1, value: customer_asset.product.retail_price)], remote: true do |f|
    %table.table.table-loose
      %tbody
        %tr
          %td.col-xs-2= f.text_field :recorded_at, class: 'form-control', data: {provide: 'datepicker', 'date-format' => 'yyyy-mm-dd', 'date-language' => I18n.locale}
          %td.col-xs-2
          %td.col-xs-2= f.number_field :amount, class: 'form-control text-right'
          %td.hidden
            .input-group
              = f.text_field :value, class: 'form-control text-right'
              .input-group-addon â‚¬
          %td= f.text_field :note, class: 'form-control'
          %td.actions
            = f.button class: 'btn btn-default' do
              = icon('check')
