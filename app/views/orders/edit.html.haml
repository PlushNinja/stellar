.page-header
  = link_to orders_path, class: 'btn btn-default' do
    = icon('chevron-circle-left', 'Back')
  %h1
    Order
    %span.small= @order.to_s

.row
  .col-sm-6
    .panel.panel-default
      .panel-body.form-horizontal
        .form-group
          %label.col-sm-4.control-label Order type
          .col-sm-8
            %p.form-control-static= @order.order_type
        .form-group
          %label.col-sm-4.control-label Ordered at
          .col-sm-8
            %p.form-control-static= @order.ordered_at

.table-responsive
  %table.table.table-striped.table-hover.table-loose
    %thead
      %tr
        %th.col-xs-2 Product code
        %th Product title
        %th.col-xs-1.text-right Amount
        %th.col-xs-2

    %tbody
      = render partial: 'order_items/order_item', collection: @order.order_items
