.page-header
  = link_to icon('print', t('actions.print')), '#print', class: 'btn btn-default'
  %h1.hidden-print
    = icon('shopping-cart', t('.shopping_cart'))
    - if current_user.can_select_pricing_group? && current_pricing.present?
      %span.small
        = title(PricingGroup)
        \:
        = current_pricing
  %h1.visible-print-block= current_store

= render partial: 'cart_contents', object: @order, as: :order
