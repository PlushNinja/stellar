%li#layout-menu.dropdown.mega-dropdown
  = dropdown_toggle do
    = icon('plus', t('.new'))
  .dropdown-menu.mega-dropdown-menu
    .container
      %ul.row
        - Section.preset_menu_options.each do |name, spans|
          %li
            = link_to admin_page_sections_path(@page, params: {spans: spans}), remote: true, method: :post do
              .page-image
                %figure= image_tag "layouts/#{name}.svg"
