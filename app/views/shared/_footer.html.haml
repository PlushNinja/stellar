.container
  .row
    .col-xs-12.col-sm-5.col-sm-push-4.bordered
      - if @footer.present? && @footer.children.any?
        %nav.navmenu
          %ul.nav.navmenu-nav
            = render partial: @footer.children, locals: {navmenu: true}
    .col-xs-8.col-sm-4.col-sm-pull-5
      = render partial: 'shared/branding'
    .col-xs-4.col-sm-3
      - if current_store.try(:brand_image).present?
        .branding
          .media
            .media-body
            .media-right
              .media-object= image_tag(current_store.brand_image)
      - if current_store.tawkto_site_id.present?
        .live-chat
          %button.btn.btn-success.btn-sm.btn-round{data: {toggle: 'modal', target: '#live-chat-modal'}}
            = icon('comment', t('live_chat.title'))
        #live-chat-modal.modal.fade{data: {backdrop: 'static'}}
          .modal-dialog
            .modal-content
              .modal-body
                %button.close{data: {dismiss: 'modal'}}= icon('close')
                %iframe{src: "https://tawk.to/chat/#{current_store.tawkto_site_id}/default/?$_tawk_popout=true"}
