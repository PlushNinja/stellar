= bootstrap_form_for [:admin, @user], layout: :horizontal,
    label_col: 'col-sm-4', control_col: 'col-sm-8' do |f|
  .panel.panel-default
    .panel-body
      = f.text_field :name
      = f.text_field :email
      - if @user.new_record?
        = f.password_field :password
        = f.password_field :password_confirmation
      = f.select :role_ids,
        current_user.grantable_role_options,
        {}, {multiple: true, class: 'selectize'}
      = f.form_group do
        = f.primary
