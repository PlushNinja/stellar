.table-responsive
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th.col-xs-4= col(ProductProperty, :property_id)
        %th= col(ProductProperty, :value)

    %tbody
      = content_tag_for :tr, product.product_properties do |product_property|
        %td= product_property.property
        %td= product_property.value_with_units
