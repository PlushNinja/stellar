$('#layout-modal').remove();
$("#{j render partial: 'admin/columns/modal'}}").appendTo('body');
$("#{j render partial: 'admin/columns/settings', object: @column, as: :column}}").appendTo($('#layout-modal .modal-body'));
var $dialog = $('#layout-modal .modal-dialog');
$dialog.initialize();
$('#layout-modal').modal({backdrop: false});
$dialog.modalPosition();
$dialog.draggable({handle: '.modal-header'});
$('.section, .column, .segment').removeClass('active');
$('##{dom_id(@column)}').addClass('active');
