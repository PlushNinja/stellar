- meta_tags_for(@page)

#static-wrap.layout-container{class: @page.albums.any? && 'has-sidebar'}
  - if @page.proxy?
    = render @page.resource.sections
  - elsif @page.sections.any?
    = render @page.sections
  - else
    %div{class: @page.wysiwyg? && 'container'}
      = @page.content.html_safe if @page.content.present?

- if @page.albums.any?
  = render partial: 'albums/sidebar', object: @page.albums, as: :albums

- if @page.can_have_content? && current_user.can_update?(@page, at: current_store)
  - content_for :auxiliary_nav do
    %li= link_to icon('scissors', col(Page, :layout)), layout_admin_page_path(@page)
