- price = product.price(current_pricing)
- unit_price = product.unit_price(product.price_cents(current_pricing))

- if price.present?
  %p.price.currency
    = icon('tag', humanized_money_with_symbol(price))
    - unless unit_price.nil?
      %span.unit-price.currency
        = unit_price_string(unit_price, product.base_unit)
  - if product.best_promoted_item.present?
    %p.retail-price.currency
      = icon('tag', humanized_money_with_symbol(product.retail_price))
