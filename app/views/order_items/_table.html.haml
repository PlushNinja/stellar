#order-items-table.table-responsive
  %table.table.table-striped.table-hover.table-loose
    %thead
      %tr
        %th.col-xs-2= col(OrderItem, :product_code)
        %th= col(OrderItem, :product_title)
        %th.text-right= col(OrderItem, :amount)
        %th.text-right à
        %th.text-right= col(OrderItem, :subtotal)
    %tfoot
      %tr
        %th.text-right{colspan: 4}= col(Order, :grand_total)
        %th.text-right= number_to_currency(@order.grand_total, unit: '€')
    %tbody
      = render partial: 'order_items/row', collection: order.order_items, as: :order_item
