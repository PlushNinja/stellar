.page-header
  = link_to orders_path(anchor: orders_tab(@order)), class: 'btn btn-default' do
    = icon('chevron-circle-left', t('actions.back'))
  %h1
    = title(Order)
    %span.small= @order.to_s

.row
  .col-sm-5
    .panel.panel-default
      .panel-body.form-horizontal
        .form-group
          %label.col-sm-4.control-label
            = col(Order, :order_type_id)
          .col-sm-8
            %p.form-control-static
              = @order.approval ? @order.order_type_name : @order.order_type
        .form-group
          %label.col-sm-4.control-label
            = col(Order, :company_name)
          .col-sm-8
            %p.form-control-static= @order.company_name
        .form-group
          %label.col-sm-4.control-label
            = col(Order, :contact_person)
          .col-sm-8
            %p.form-control-static= @order.contact_person
        #shipping-info.collapse{class: @order.has_shipping? ? 'in' : ''}
          .form-group
            %label.col-sm-4.control-label
              = col(Order, :shipping_at)
            .col-sm-8
              %p.form-control-static= @order.shipping_at
          .form-group
            %label.col-sm-4.control-label
              = col(Order, :billing_address)
            .col-sm-8
              %p.form-control-static= @order.billing_address
          .form-group
            .col-sm-3.col-sm-offset-4
              %p.form-control-static= @order.billing_postalcode
            .col-sm-5
              %p.form-control-static= @order.billing_city
          .form-group
            %label.col-sm-4.control-label
              = col(Order, :shipping_address)
            .col-sm-8
              %p.form-control-static= @order.shipping_address
          .form-group
            .col-sm-3.col-sm-offset-4
              %p.form-control-static= @order.shipping_postalcode
            .col-sm-5
              %p.form-control-static= @order.shipping_city
        .form-group
          %label.col-sm-4.control-label
            = col(Order, :notes)
          .col-sm-8
            %p.form-control-static.pre><= @order.notes

  .col-sm-7
    = render partial: 'order_items/table', object: @order, as: :order
