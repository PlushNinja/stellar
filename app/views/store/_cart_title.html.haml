%h1.hidden-print
  - if @order.targeted?
    = icon('inbox', t('store.cart.order_or_quote'))
    %span.small= bootstrap_label(@order.customer, appearance: @order.source.appearance, text: @order.customer.name.split.first)
  - else
    = icon('shopping-cart', t('store.cart.shopping_cart'))
%h1.visible-print-block= current_store
