.payment-buttons {

  .payment-button {
    width: 125px;
    height: 85px;
    float: left;
    transform: scale(0.88);
    opacity: 0.667;
    transition: all 0.6s ease-in-out 0s;

    &:hover {
      cursor: pointer;
      transform: scale(1);
      opacity: 1;
    }

    &.visa { background-image: url(<%= asset_url('cards/visa.png') %>); }
    &.mastercard { background-image: url(<%= asset_url('cards/mastercard.png') %>); }
    &.nordea { background-image: url(<%= asset_url('banks/nordea.png') %>); }
    &.op { background-image: url(<%= asset_url('banks/op.png') %>); }
    &.danske { background-image: url(<%= asset_url('banks/danskebank.png') %>); }
    &.saastopankki { background-image: url(<%= asset_url('banks/saastopankki.png') %>); }
    &.aktia { background-image: url(<%= asset_url('banks/aktia.png') %>); }
    &.handelsbanken { background-image: url(<%= asset_url('banks/handelsbanken.png') %>); }
    &.spankki { background-image: url(<%= asset_url('banks/spankki.png') %>); }
    &.omasaastopankki { background-image: url(<%= asset_url('banks/omasaastopankki.png') %>); }
    &.alandsbanken { background-image: url(<%= asset_url('banks/alandsbanken.png') %>); }
    &.euroloan { background-image: url(<%= asset_url('invoices/euroloan.png') %>); }
    &.joustoraha { background-image: url(<%= asset_url('invoices/joustoraha.png') %>); }
  }
}
