= f.fields_for "#{type}_address" do |ff|
  %fieldset
    %legend= t(type, scope: '.checkout.addresses.labels')
    .row
      .col-sm-8
        = ff.text_field :name, hide_label: true, placeholder: col(Address, :name), class: 'may-be-required', required: required
      .col-sm-4
        = ff.phone_field :phone, hide_label: true, placeholder: col(Address, :phone)
    = ff.text_field :company, hide_label: true, placeholder: col(Address, :company)
    = ff.text_field :address1, hide_label: true, placeholder: col(Address, :address1), class: 'may-be-required', required: required
    = ff.text_field :address2, hide_label: true, placeholder: col(Address, :address2)
    .row
      .col-xs-6.col-sm-4
        = ff.text_field :postalcode, hide_label: true, placeholder: col(Address, :postalcode), class: 'may-be-required', required: required
      .col-xs-6.col-sm-4
        = ff.text_field :city, hide_label: true, placeholder: col(Address, :city), class: 'may-be-required', required: required
      .col-sm-4
        = ff.select :country_code, Store.country_options, {hide_label: true, prompt: true}, {class: 'may-be-required', required: required, class: 'selectize'}
