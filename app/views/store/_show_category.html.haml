#products-wrap
  .products
    .page-header.visible-print
      %h1= @category.to_s
      %p.lead= @category.subtitle
    - if @category.filtering?
      .product-filter
        = render partial: 'products/filtering'
    #product-view.product-grid
      %ul{class: current_store.masonry? && 'masonry-grid'}
        = render @products

:coffee
  $('.category').deactivate()
  $("##{dom_id(@category)}").activate()
  $('.navbar-form').show()
