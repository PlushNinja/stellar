/*
 * Theme specific styles
 */

$body-bg:       #fff;
$brand-primary: #99000f;
$navbar-default-link-active-bg: transparent;

$border-radius-base:  0;
$border-radius-large: 0;
$border-radius-small: 0;

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

body {
  overflow-y: scroll;
  padding-top: 80px;
}

#main-nav {
  @include box-shadow(0 0 18px 0 rgba(0,0,0,0.333));
  font-size: $font-size-small;
  font-weight: 500;

  > .content {
    @extend .container;
    padding-top: 15px;    // padding the container only,
    padding-bottom: 15px; // not the contained elements

    .navbar-brand {
      padding-top: 0;
      padding-bottom: 0;

      img {
        max-height: 50px;
        margin: 0;
      }
    }

    .navbar-nav {
      > li {

        &.active:before {
          content: '';
          position: absolute;
          left: 15px;
          right: 15px;
          bottom: 10px;
          border-bottom: 3px solid $brand-primary;
        }
      }
    }
    #navbar-search .form-control {
      @extend .input-sm;
      max-width: 120px;
    }
  }
}

/*
  on extra small screens the navbar will collapse, and we shrink the logo,
  and revert navbar links to original styles
*/
@media (max-width: $screen-sm-min) {
  body { padding-top: 75px; }

  #main-nav {
    > .content {
      padding-top: 10px;
      padding-bottom: 10px;

      .navbar-brand img {
        max-height: 30px;
        margin-top: 12px;
      }

      .navbar-nav {
        > li {
          margin-top: 0;
          padding-top: 0;

          &.active {
            background-color: darken($navbar-default-bg, 6.5%);
            &:before { display: none; }
          }
        }
      }
    }
  }
  #category-banner-wrap { display: none; }
  #categories-wrap > .categories > ul > li.category {
    &.active {
      > .subcategories-wrap { display: block; }
    }
    > .subcategories-wrap { display: none; }
  }
  .products, .product-detail { padding-top: 30px; }
}

#static-wrap {
  .container {
    margin-top: 20px;

    > .page-header { margin-top: 0; }
  }

  .product.snippet {
    @extend .panel, .panel-default;
    display: block;
    color: inherit;
    text-decoration: none;

    &:hover {
      .product-content .product-description {
        max-height: 1000px;
        transition: all 0.8s ease-in-out 0s;
      }
    }
    .product-image {
      img {
        display: block;
        max-width: 100%;
        max-height: 250px;
        width: auto;
        height: auto;
        margin: 0 auto;
      }
    }
    .product-content {
      @extend .panel-body;

      h3 {
        margin-top: 10px;
        font-size: $font-size-large;

        .small {
          display: block;
          text-transform: uppercase;
        }
      }
      .product-description {
        max-height: 100px;
        overflow: hidden;
        font-size: $font-size-small;
        color: $gray;
        transition: all 0.4s ease-in-out 0s;
      }
    }
    .product-price {
      @extend .panel-footer;

      p {
        margin-bottom: 0;
        font-weight: 500;
      }
    }
  }
}

#category-banner-wrap {
  > .category-banner {
    > .carousel {
      .item {
        img {
          width: 100%;
          min-height: 400px;
        }
      }
    }
  }
}

/*
  portal wrapper
*/
#portal-wrap {
  @extend .container;
  margin-top: 30px;
  padding-bottom: 30px;
}

/*
  storefront wrapper with contained elements in source order
*/
#store-wrap {
  @extend .container;
  margin-top: 30px;
  padding-bottom: 30px;

  .store-sections {
    @extend .row;

    #categories-wrap {
      @extend .col-sm-3, .col-lg-2;
      padding-right: 0;
    }
    #products-wrap {
      @extend .col-sm-9, .col-lg-10;
    }
    #product-detail-wrap {
      @extend .col-sm-9, .col-lg-10;

      .images.presentational {
        @extend .col-xs-12, .col-sm-7, .col-md-8, .col-lg-9;
      }
      .product-meta {
        @extend .col-xs-12, .col-sm-5, .col-md-4, .col-lg-3;
      }
      .product-description {
        @extend .col-xs-12, .col-sm-7, .col-md-8, .col-lg-9;
      }
      .images.technical {
        @extend .col-xs-12, .col-sm-5, .col-md-4, .col-lg-3;
      }
    }
  }
}

#categories-wrap {
  > .categories {
    a { transition: all 0.2s ease-in-out 0s; }

    > ul {
      @extend .nav, .nav-pills, .nav-stacked;
      font-size: $font-size-small;

      > li.category {
        margin-left: -15px;

        &.active > a {
          background-color: transparent;
          background-image: url(<%= asset_path('leasit-bar.svg') %>);
        }
        &:hover > a { background-color: transparent; }
        > a {
          font-weight: 500;
          background-color: transparent;
          background-image: url(<%= asset_path('leasit-bar-gradient.svg') %>);
          background-position: top left;
          background-size: cover;

          img {
            @extend .box-icon;
            float: left;
            margin-right: 10px;
          }
          p {
            margin: 0;
            line-height: 25px;
            white-space: nowrap;
          }
        }
        > .subcategories-wrap {
          > .subcategories {
            > ul {
              @extend .nav, .nav-pills, .nav-stacked;
              margin-top: 2px;
              margin-left: 35px;

              > li.category {
                &.active > a {
                  background-color: transparent;
                  background-image: url(<%= asset_path('leasit-bar.svg') %>);
                  background-position: top left;
                  background-size: cover;
                }
                &:hover > a { background-color: transparent; }
                > a {
                  padding: 5px 15px;

                  img { display: none; }
                  p { margin: 0; }
                }
              }
            }
          }
        }
      }
    }
  }
}

#search-panel-wrap {
  .search-panel {
  }
}

#products-wrap {

  .products {
    @extend .row;

    .product-list {
      @extend .col-xs-12;
    }

    .product-grid {
      a, .btn { transition: all 0.2s ease-in-out 0s; }

      > ul {
        list-style: none;
        padding-left: 0;
        margin-bottom: 0;
        border-right: 1px solid $table-border-color;

        li.product {
          @extend .col-xs-6, .col-sm-4, .col-md-4, .col-lg-3;
          padding-bottom: 20px;
          border-left: 1px solid $table-border-color;
          border-bottom: 1px solid $table-border-color;

          &.double {
            @extend .col-xs-12, .col-sm-8, .col-md-8, .col-lg-6;
            padding-top: 10px;
            border-top: 2px solid $text-color;

            a {
              .product-image {
                @extend .col-xs-6;
                padding-left: 0;
                margin-bottom: 0;
              }
              .product-text {
                @extend .col-xs-6;
                padding-right: 0;

                .description { margin-bottom: 40px; }
              }
            }
            .buy-now {
              @extend .col-xs-6;
              position: absolute;
              right: 0;
              bottom: 20px;
            }
          }

          &:hover {
            @include box-shadow(0 0 30px 0 rgba(0,0,0,0.05) inset);

            a {
              h3 { color: $brand-primary; }
              img { transform: scale(1.05); }
            }
          }
          a {
            display: block;
            padding-top: 10px;
            color: inherit;
            text-decoration: none;

            .product-image {
              margin-bottom: 15px;

              img {
                @extend .img-responsive;
                margin: 0 auto;
                transition: all 0.4s ease-in-out 0s;
              }
            }
            .product-text {
              h3 {
                margin-top: 0;
                font-size: $font-size-large;

                .small {
                  display: block;
                  text-transform: uppercase;
                }
              }
              .description {
                position: relative;
                overflow: hidden;
                max-height: 120px;
                margin-bottom: 10px;
                font-size: $font-size-small;
                color: $gray;

                &:after {
                  @include gradient-vertical(rgba(0,0,0,0), rgba($text-color, 0.1), 50%, 100%);
                  content: '';
                  display: block;
                  position: absolute;
                  left: $grid-gutter-width/-2;
                  right: $grid-gutter-width/-2;
                  top: 110px;   // obscures the bottom portion
                  height: 10px; // but clipped by bounding box
                }
              }
            }
            .promotion {
              > p {
                @extend .label, .label-info;
                display: block;
              }
            }
          }
          .buy-now {
            @extend .clearfix;

            .store {
              @extend .pull-left;
              margin-bottom: 0;
              font-size: $font-size-small;
              font-weight: 500;

              img {
                display: inline-block;
                margin-right: 5px;
              }
            }
            .price {
              @extend .pull-right, .label, .label-primary;
              background-color: transparent;
              background-image: url(<%= asset_path('leasit-bar.svg') %>);
              background-position: top left;
              background-size: cover;
              font-size: 12px;
              line-height: 2;
              margin-bottom: 0;
              border-radius: 0;
            }
            form {
              button { @extend .btn-default; }
            }
          }
        }
      }
    }
  }
}

#product-detail-wrap {
  border-left: 1px solid $table-border-color;

  .product-detail {
    a, .btn { transition: all 0.2s ease-in-out 0s; }

    .product-header {
      margin-bottom: 30px;

      .actions {
        @extend .pull-right;

        .btn { display: inline-block; }
      }

      .product-title {
        margin: 0;
        font-size: 3em;

        .small {
          display: block;
          text-transform: uppercase;
          font-size: 40%;
          letter-spacing: 0.05em;
        }
      }
    }
    .product-body {
      @extend .row;

      .images.presentational {
        margin-bottom: 30px;
      }
      .product-meta {
        .product-code {
          margin-bottom: 20px;
        }
        .buy-now {
          @extend .well;

          .product-pricing {
            .price {
              @extend .lead, .text-primary;
              margin-right: 0.5em;
              margin-bottom: 0;
              font-weight: 500;

              .tax-rate, .unit-price {
                @extend .text-muted;
                display: inline-block;
                font-size: $font-size-base;
                font-weight: 400;
              }
              .unit-price { display: block; }
            }
            .retail-price {
              text-decoration: line-through;
            }
          }
          form {
            .form-group {
              margin-top: 20px;

              button {
                @extend .btn-block, .btn-lg, .btn-success;
              }
            }
          }
          .go-checkout .btn {
            @extend .btn-block, .btn-lg;
          }
        }
        .variant-products {
          margin-bottom: 20px;

          button { @extend .btn-block; }
          .dropdown-menu {
            @extend .dropdown-menu-right;
          }
        }
        .product-stock {
          ul {
            font-size: $font-size-small;

            > li > span { @extend .badge; }
          }
        }
      }

      .product-description {
        .body-text { margin-bottom: 20px; }
      }
      .images.technical {
        .image { padding-bottom: 100%; }
      }
      .iframes {}
      .product-properties {
        .properties, .components {
          tr > :last-child { padding-right: 10px; }
        }
      }
      .images {
        .nav { @extend .nav-tabs, .nav-sm; }
        .image {
          position: relative;
          height: 0;
          padding-bottom: 61.8%; // golden ratio

          > a.image-link {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;

            img {
              display: block;
              max-width: 100%;
              max-height: 100%;
              width: auto;
              height: auto;
              margin: 0 auto;
              transition: all 0.4s ease-in-out 0s;

              &:hover {
                @include box-shadow(0 0 15px 0 rgba(0,0,0,0.15));
              }
            }
          }
        }
      }
    }
    .product-footer {
      margin-top: 20px;
      border-top: 1px solid $table-border-color;

      h2 { font-size: $font-size-large; }

      .requisite-products, .variant-products {
        > ul {
          list-style: none;
          padding-left: 0;
          display: flex;
          flex-flow: row wrap;

          li.product {
            @extend .col-xs-6, .col-sm-4, .col-md-3;
            flex: 0 1 auto;
            padding-bottom: 40px;
            border-right: 1px solid $table-border-color;

            &:hover {
              a {
                h3 { color: $brand-primary; }
              }
            }
            a {
              display: block;
              color: inherit;
              text-decoration: none;

              .product-image {
                position: relative;
                overflow: hidden;
                width: 100%;
                height: 0;
                padding-bottom: 100%;

                img {
                  max-width: 100%;
                  max-height: 100%;
                  width: auto;
                  height: auto;
                  position: absolute;
                  left: 50%;
                  top: 50%;
                  transform: translate(-50%,-50%);
                }
              }
              .product-text {
                h3 {
                  font-size: $font-size-base;

                  .small {
                    display: block;
                    text-transform: uppercase;
                  }
                }
              }
              .properties {
                font-size: $font-size-small;
                tr > :first-child { padding-left: 0; }
              }
            }
            .buy-now {
              position: absolute;
              bottom: 10px;
              left: $grid-gutter-width/2;
              right: $grid-gutter-width/2;
              display: flex;

              .price {
                @extend .label, .label-primary;
                flex: 0 1 auto;
                background-color: transparent;
                background-image: url(<%= asset_path('leasit-bar.svg') %>);
                background-position: top left;
                background-size: cover;
                font-size: 12px;
                line-height: 2;
                margin-bottom: 0;
                border-radius: 0;
              }
              form {
                flex: 0 1 auto;
                @extend .form-inline;
                button { @extend .btn-default; }
              }
            }
          }
        }
      }
    }
  }
}

.footer {
  background-color: $navbar-default-bg;

  > .content {
    @extend .container;
  }
}

@media print {
  #products-wrap {
    .products {
      .product-grid {
        margin: 0;
        padding: 0;

        ul.masonry-grid {
          display: block;
          position: static !important;
          height: auto !important;

          li.product {
            display: block;
            position: static !important;
            width: 100%;
            max-width: 100%;
            padding: 10px 0;
            border-top: 1px solid #eee;
            page-break-inside: avoid;
            break-inside: avoid;

            &:first-child { border-top: 0; }

            a {
              display: block;
              padding: 0;
              border: 0;

              &:after {
                content: '';
                display: table;
                clear: both;
              }

              .product-image {
                float: left;
                width: 200px;
                height: auto;
                padding: 0;

                img {
                  position: static;
                  display: block;
                  transform: none;
                  margin: 0 auto;
                }
              }
              .product-text {
                margin-left: 220px;
                text-align: left;

                .description { max-height: none; }
              }
              .promotion { display: none; }
            }
            .buy-now {
              position: static;
              display: block;

              .price { flex: none; }
              form { display: none; }
            }
          }
        }
      }
    }
  }
}
