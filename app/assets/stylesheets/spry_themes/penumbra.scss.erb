/*
 * Theme specific styles
 */

$navbar-inverse-bg: #373737;
$navbar-inverse-color: #aaa;
$navbar-inverse-link-color: #ddd;
$navbar-inverse-toggle-hover-bg: #fff;
$navbar-inverse-toggle-border-color: #aaa;

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

body {
  > nav.navbar {
    @extend .navbar-inverse;
    @include box-shadow(0 1px 10px 0 rgba(0,0,0,.666));

    .navbar-toggle {
      color: $navbar-inverse-link-color;
    }
  }
}

#main {
  padding-bottom: 0;
  background: transparent;
}

.penumbra {
  overflow-y: scroll;
  padding-top: 50px;
  background-image: url(<%= asset_path('bokeh-3.jpg') %>);
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-size: cover;

  .container {
    margin-left: 0;
    margin-right: 0;
    padding-left: $grid-gutter-width;
    padding-right: $grid-gutter-width;
    width: auto;
  }

  .page-content {
    padding-top: 30px;

    img { @extend .img-responsive; }
  }

  ul.categories {
    @extend .row;
    margin-left: -1*$grid-gutter-width;
    margin-right: -1*$grid-gutter-width;
    list-style: none;
    margin-bottom: 0;
    padding: 10px $grid-gutter-width;
    background-color: rgba(255,255,255, 0.5);

    li.category {
      float: left;
      position: relative;
      width: 10%;
      min-width: 95px;
      max-width: 125px;
      margin-right: 10px;
      margin-bottom: 10px;

      &.active a p { @extend .btn-primary; }
      &:hover a img { transform: scale(1.10); }
      a {
        display: block;
        padding: 0 0 20px;
        text-decoration: none;
        color: inherit;

        img {
          @extend .img-responsive;
          transition: all 0.6s ease-in-out 0s;
        }
        p {
          @extend .btn, .btn-xs;
          position: absolute;
          bottom: 0;
          left: 0;
          right: 0;
          white-space: normal;
          font-weight: 500;
          line-height: 1.2;
          letter-spacing: -0.01em;
          transition: all 0.2s ease-in-out 0s;
        }
      }
    }
  }

  ul.products {
    @extend .row;
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start;
    position: relative;
    list-style: none;
    padding: 15px 0;

    li.product {
      position: relative;
      width: 220px;
      padding: 15px;
      margin-left: 15px;
      margin-bottom: 15px;
      background-color: #fff;
      border-radius: $border-radius-base;
      transition: all 0.2s ease-in-out 0s;

      &:hover {
        @include box-shadow(0 0 8px 0 $brand-primary);
      }
      a {
        display: block;
        padding-bottom: 80px;

        &:hover { text-decoration: none; }
        .product-image {
          position: relative;
          height: 200px;

          img {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            margin: auto;
          }
        }
        .product-text {
          text-align: center;

          h3 {
            margin-top: 15px;
            margin-bottom: 5px;
            font-size: 17px;
            letter-spacing: -0.01em;

            .small { font-size: 14px; }
          }
          .description { display: none; }
        }
      }
      .buy-now {
        position: absolute;
        bottom: 15px;
        left: 0;
        right: 0;
        text-align: center;

        p {
          @extend .lead;
          font-size: 15px;
          margin-bottom: 10px;
        }
        form {
          button {
            @extend .btn-primary;
            width: 33%;
            transition: all 0.2s ease-in-out 0s;
          }
        }
      }
    }
  }

  .product-detail {
    @include gradient-horizontal(rgba(255,255,255,1), rgba(255,255,255,0));
    position: relative;
    margin: 0 -1*$grid-gutter-width;
    padding: 30px $grid-gutter-width;

    .product-header {
      @extend .row;

      .product-title {
        @extend .col-xs-12;
        margin-top: 40px;
        margin-bottom: 20px;
        font-weight: 500;
        text-transform: uppercase;
      }
      .product-meta {
        position: absolute;
        top: 30px;
        left: 30px;
        right: 30px;

        .product-actions {
          float: right;

          .form-inline { display: inline-block; }
          .btn {
            display: inline-block;
            transition: all 0.2s ease-in-out 0s;

            &:hover {
              @include box-shadow(0 0 5px 0 rgba(0,0,0,0.333));
            }
          }
        }
        .product-pricing {
          float: right;
          margin: 0 15px;
          font-weight: 500;
          font-size: $font-size-large;
          line-height: 34px;
        }
      }
    }
    .product-body {
      @extend .row;

      .product-description {
        @extend .col-xs-12, .col-md-4;

        .product-code {
          @extend .pull-left;
          font-size: $font-size-small;
        }
        .product-stock {
          @extend .pull-right, .clearfix;
        }
        .body-text { clear: both; }
        .list-group { margin-top: 20px; }
      }
      .images {
        padding-bottom: 70px;

        .nav {
          @extend .hidden-print;
          position: absolute;
          left: $grid-gutter-width/2;
          bottom: 20px;

          > li > a { padding: 5px; }
        }
        .image {
          a {
            display: block;

            img {
              @extend .img-responsive;
              margin: 0 auto;
            }
          }
        }
        &.technical {
          @extend .col-xs-12, .col-sm-4, .col-md-3;
        }
        &.presentational {
          @extend .col-xs-12, .col-sm-8, .col-md-5;
        }
      }
    }
  }
}
