- items = category_menu.contained_items || @categories
- partial_path = category_menu.contained_item_partial_path

- if offcanvas
  = render partial: 'pages/offcanvas_menu', object: category_menu, as: :root, locals: {items: items, partial_path: partial_path}
- else
  = render partial: 'pages/mega_dropdown', object: category_menu, as: :root, locals: {items: items, partial_path: partial_path}
