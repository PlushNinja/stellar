%tbody.rowlink{data: {link: 'row'}}
  = render partial: 'admin/products/row', object: product, as: :product

- if product.has_variants?
  %tbody.rowlink.subtable.sortable{id: dom_id(product, :variants), data: {link: 'row'}}
    = render partial: 'admin/products/row', collection: product.variants.sorted, as: :product
