#select-for-cart-modal.modal{data: {backdrop: 'static'}}
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %button.close{data: {dismiss: 'modal'}}= icon('close')
        %h4.modal-title= t('store.select_for_cart')
      .table-responsive
        %table.table{style: 'background-color: #eee'}
          %thead
            %tr
              %th
              %th.col-xs-8= col(Product, :title)
              %th.col-xs-2.no-wrap= col(Product, :code)
              - if can_see_pricing?
                %th.col-xs-2.no-wrap= col(Product, :price)
              %th.actions
          %tbody
          = render partial: 'products/modal_row', collection: [product], as: :product
      .table-responsive
        %table.table.table-hover
          %thead
            %tr
              %th
              %th{colspan: can_see_pricing? ? 4 : 3}= t('store.requisite_products')
            %tr
              %th
              %th.col-xs-8= col(Product, :title)
              %th.col-xs-2.no-wrap= col(Product, :code)
              - if can_see_pricing?
                %th.col-xs-2.no-wrap= col(Product, :price)
              %th.actions
          %tbody
          = render partial: 'products/modal_row', collection: product.requisite_products.sorted, as: :product
