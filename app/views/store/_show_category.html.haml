.page-header.visible-print
  %h1
    = current_store.to_s
    %small= @category.to_s
.product-grid.collapse.in
  %ul{class: current_store.masonry? ? 'brickwork' : ''}= render @products
.product-list.collapse
  .panel.panel-default
    = render partial: 'products/table', object: @products, as: :products

:coffee
  $('.search-panel').hide()
  $('.product-detail').hide()
  $('.category').deactivate()
  $("##{dom_id(@category)}").activate()
  $('.category-banner').replaceWith("#{j render partial: 'category_banner'}")
  $('.category-banner').show()
  $('.categories').show()
  $('.products').show()
  $('#products-view-toggle').show()
  $('.navbar-form').show()

  if $(window).isSmall()
    $(window).scrollTo $('.products'), 300, offset: -70
