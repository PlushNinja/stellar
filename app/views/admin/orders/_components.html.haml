.table-responsive
  %table.table.table-hover.table-condensed
    %thead
      %tr
        %th.no-wrap= col(OrderItem, :product_code)
        %th= col(OrderItem, :product_title)
        %th.col-xs-2.text-right #

    %tbody
      - order.aggregated_components.each do |component, quantity|
        %tr
          %td.no-wrap= link_to component.code, admin_product_path(component)
          %td
            %strong= component.title
            = component.subtitle
          %td.text-right= quantity
