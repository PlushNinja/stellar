- letterhead = @order.store.letterhead(current_user)
- if letterhead.present?
  = render partial: 'pages/layout', object: letterhead, as: :page

.page-header
  %h1
    - if @order.incoming_for?(current_user)
      = t('.delivery_note')
    - if @order.quotable?
      = t('.quotation')
    %span.small= @order.to_s
