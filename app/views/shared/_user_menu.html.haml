- if user_signed_in? && !current_user.guest?
  %li.dropdown
    %a.dropdown-toggle{href: '#', role: 'button', 'aria-expanded' => 'false', data: {toggle: 'dropdown'}}
      = icon('user', current_user.name)
      %span.label{class: "label-#{current_user.appearance}"}= current_user.human_attribute_value(:group).first
      %span.caret
    %ul.dropdown-menu.dropdown-menu-right{role: 'menu'}
      = active_link_to icon('truck', title(Order, count: 2)), orders_path, wrap_tag: :li
      - if current_user.can_select_pricing_group?
        %li.divider
        %li.dropdown-header= title(PricingGroup, count: 2)
        %li{class: @pricing_group.nil? ? 'active' : nil}
          = link_to t('store.pricing_groups.default'), pricing_path
        - current_store.pricing_groups.each do |pricing_group|
          %li{class: @pricing_group == pricing_group ? 'active' : nil}
            = link_to pricing_group, pricing_path(pricing_group)
      %li.divider
      %li= link_to icon('sign-out', t('devise.sessions.delete.sign_out'), class: 'fa-fw'), destroy_user_session_path, method: :delete
- else
  %li= link_to icon('sign-in', class: 'fa-lg'), new_user_session_path
