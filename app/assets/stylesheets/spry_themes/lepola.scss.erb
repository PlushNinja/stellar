/*
 * Theme specific styles
 */

$brand-primary: lighten(#1a3476, 8%);
$navbar-inverse-bg: #1a3476;
$navbar-inverse-color: lighten(#1a3476, 40%);
$navbar-inverse-link-color: lighten(#1a3476, 45%);

@import "bootstrap-generators.scss";
@import "bootstrap-font-awesome.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

.lepola {
  overflow-y: scroll;
  background-image: url(<%= asset_path('lepola-bg.svg') %>);
  background-position: bottom left;
  background-repeat: no-repeat;
  background-size: 1000px 1000px;

  #main {
    background: transparent;
  }
  #main-nav {
    @extend .navbar-inverse;
  }

  .container {
    margin-left: 0;
    margin-right: 0;
    padding-left: $grid-gutter-width;
    padding-right: $grid-gutter-width;
    width: auto;
  }

  ul.categories {
    @extend .nav, .nav-pills;
    z-index: $zindex-navbar;
    position: fixed;
    left: 0;
    right: 0;
    top: $navbar-height;
    padding: 5px $grid-gutter-width/2;
    font-size: $font-size-small;
    background: #fff;
    border-bottom: 1px solid #1a3476;

    li.category {
      a {
        border-radius: 18px;

        img { display: none; }
        p { margin: 0; }
      }
    }
  }

  ul.products {
    list-style: none;
    position: relative;

    li.product {
      position: absolute;
      width: 180px;
      padding: 10px;
      margin: 0 10px 10px 0;
      background: #fff;
      border-radius: $border-radius-base;

      h3 {
        margin: 0.5em 0 0;
        font-size: $font-size-base;
      }
      .description, .buy-now {
        display: none;
      }
      &:hover {
        @include box-shadow(0 0 8px $input-border-focus);
        a { text-decoration: none; }
      }
    }
  }
}

.footer {
  background: #1a3476;
  color: lighten(#1a3476, 40%);
}
