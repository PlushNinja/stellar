$segment = $('##{dom_id(@segment)}');
- if @panel && !@content_mode
  $panel = $('#segment-#{@panel}-panel');
  $panel.destroySelectized();
  $panel.replaceWith("#{j render partial: "admin/segments/panels/#{@panel}", object: @segment, as: :segment}");
$segment.replaceWith("#{j render partial: 'admin/segments/segment', object: @segment}");
$('##{dom_id(@segment)}').addClass('active');
$('##{dom_id(@segment)}').initialize();
- @segment.referring_segments.each do |reference|
  $('##{dom_id(reference)}').replaceWith("#{j render partial: 'admin/segments/segment', object: reference}");
  $('##{dom_id(reference)}').initialize();
