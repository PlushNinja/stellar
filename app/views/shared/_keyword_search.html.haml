- if search_available?
  = form_tag search_path, {method: :get, data: {push: 'partial', target: '.products'}, class: 'navbar-form navbar-left', role: 'search'} do
    .form-group.has-feedback
      = search_field_tag :keyword, params[:keyword], class: 'form-control', placeholder: t('search_bar.keyword')
      %span.form-control-feedback= icon('search')
