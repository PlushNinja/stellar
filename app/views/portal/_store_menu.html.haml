%li.dropdown
  %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
    = icon('shopping-bag', title(Store, count: 2), class: 'fa-lg')
    %span.caret
  %ul.dropdown-menu{role: 'menu'}
    = content_tag_for :li, @stores do |store|
      = link_to store, front_url(host: store.hostname_at(request.domain).fqdn)
