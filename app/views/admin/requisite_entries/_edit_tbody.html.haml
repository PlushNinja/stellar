= content_tag_for :tr, product.requisite_entries.includes(:requisite).sorted do |entry|
  %td.hidden-print= drag_handle
  %td
    %strong= entry.requisite.title
    = entry.requisite.subtitle
  %td= entry.requisite.code
  %td.actions
    = link_to icon('remove'), admin_requisite_entry_path(entry), remote: true, method: :delete, class: 'btn btn-sm btn-danger'
