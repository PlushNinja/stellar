.product-grid.collapse.in
  %ul= render @products
.product-list.collapse
  .panel.panel-default
    = render partial: 'products/table', object: @products, as: :products

:coffee
  $('.categories').hide()
  $('.product-detail').hide().addClass 'from-search'
  $('.navbar-form').hide()
  $('.search-panel').html("#{j render partial: 'store/search_panel'}")
  $('.search-panel').initialize()
  $('.search-panel').show()
  $('.products').show().addClass 'from-search'
