.table-responsive
  %table.table.table-striped.table-hover.table-loose
    %thead
      %tr
        %th= col(Product, :title)
        %th.col-xs-2= col(Product, :code)

    %tbody
      = content_tag_for :tr, product.requisite_entries do |entry|
        %td
          %strong
            = link_to entry.requisite.title, admin_product_path(entry.requisite)
          = entry.requisite.subtitle
        %td= entry.requisite.codes
