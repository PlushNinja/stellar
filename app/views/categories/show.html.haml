.page-header
  = link_to categories_path, class: 'btn btn-default' do
    = icon('chevron-circle-left')
    Back
  = link_to edit_category_path(@category), class: 'btn btn-primary' do
    = icon('pencil-square')
    Edit
  %h1= @category.to_s

%dl.dl-horizontal
  %dt Parent category:
  %dd= @category.parent_category
  %dt Name:
  %dd= @category.name
