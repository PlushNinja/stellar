= form_for [:admin, imageable, imageable.images.new],
    html: {multipart: true, class: 'dropzone well'} do |f|
  .fallback
    = f.file_field :attachment
    = f.submit class: 'btn btn-primary'

:coffee
  Dropzone.options.newImage =
    paramName: 'image[attachment]'
    success: (file, image) ->
      $.get('/admin/images/' + image['id']);
    complete: (file) ->
      this.removeFile(file);
