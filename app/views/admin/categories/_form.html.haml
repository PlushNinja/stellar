= bootstrap_form_for [:admin, @category], layout: :horizontal,
    label_col: 'col-sm-4', control_col: 'col-sm-8' do |f|
  .panel.panel-default
    .panel-body
      %fieldset{disabled: locked}
        = f.select :parent_category_id, current_store.category_options(@category), {include_blank: true}, {class: 'selectize'}
        = f.text_field :name
        = f.text_area :description, class: 'wysiwyg'
      - unless locked
        = f.form_group do
          = f.primary

:coffee
  $('#category_description').editable
    inlineMode: false
    minHeight: 200
    maxHeight: 400
    buttons: [
      'bold', 'italic', 'underline', 'formatBlock', 'align',
      'undo', 'redo'
    ]
