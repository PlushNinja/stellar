.navbar-header
  %button.navbar-toggle.collapsed.hamburger.hamburger--squeeze{type: 'button', data: {toggle: 'collapse', target: '#app-navbar'}}
    %span.hamburger-box
      %span.hamburger-inner
  = link_to root_path, class: 'navbar-brand' do
    = image_tag 'stellar-badge.svg'
#app-navbar.collapse.navbar-collapse
  %ul.nav.navbar-nav.navbar-right
    - if user_signed_in?
      %li.dropdown
        = dropdown_toggle do
          = current_user.name || current_user.email
          %span.caret
        %ul.dropdown-menu.dropdown-menu-right{role: 'menu'}
          %li= link_to menu_title('sign-out', t('devise.sessions.delete.sign_out')), destroy_user_session_path, method: :delete
    - else
      = menu_item 'sign-in', t('devise.sessions.new.sign_in'), new_user_session_path
