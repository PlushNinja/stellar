.search-form
  = search_form_for @q, url: search_path, data: {push: 'partial', target: '.products', 'optimize-url-params' => false}, class: 'form-horizontal' do |f|
    .form-group
      %label.col-sm-4.control-label= t('search_panel.keyword')
      .col-sm-8
        = f.search_field :title_or_subtitle_cont, class: 'form-control'
    .form-group
      %label.col-sm-4.control-label= col(Product, :category_ids)
      .col-sm-8
        = f.select :categories_id_in, current_store.category_options, {include_blank: true}, {multiple: true, class: 'form-control'}
    .form-group
      %label.col-sm-4.control-label= col(Product, :sales_price)
      .col-sm-8
        .input-group
          = f.text_field :sales_price_gteq, class: 'form-control text-right'
          %span.input-group-addon â‹¯
          = f.text_field :sales_price_lteq, class: 'form-control text-right'
    .form-group
      .col-sm-8.col-sm-offset-4
        = f.submit t('search_panel.search'), class: 'btn btn-default'

:coffee
  $('select', '.search-form').selectize
    plugins: ['remove_button']
    dropdownParent: 'body'
    allowEmptyOption: true
