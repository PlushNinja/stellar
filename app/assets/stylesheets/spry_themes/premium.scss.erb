/*
 * Theme specific styles
 */

$body-bg:         #fff;
$brand-primary:   #3472f7;
$brand-success:   #05ae0e;
$brand-info:      #2ca8ff;
$brand-warning:   #ff9500;
$brand-danger:    #ff3b30;

$navbar-inverse-bg: #555;
$bg-tone:           #f6f6f6;

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";


/*
 * Extra tall navbar
 */
#main-nav {
  @include box-shadow(0 0 24px 0 rgba(0,0,0,0.5));
}
#main-nav .container {
  padding-top: 15px;
  padding-bottom: 15px;
}
#main-nav .navbar-brand {
  padding-top: 0;
  padding-bottom: 0;

  img { max-height: 50px; }
}

/* Push content below the navbar and make room for the footer */
#offcanvas-wrap > #canvas-wrap {
  padding-top: 80px;
  padding-bottom: 140px;
}

/* Rounded navbar search */
#navbar-search input { border-radius: $input-height-base/2; }


/*
 * Less prominent mobile navbar
 */
@media (max-width: $screen-xs-max) {
  #offcanvas-wrap > #canvas-wrap { padding-top: 60px; }

  #main-nav {
    @include box-shadow(0 0 4px 0 rgba(0,0,0,0.75));
  }
  #main-nav .container {
    padding-top: 5px;
    padding-bottom: 5px;
  }
  #main-nav .navbar-brand {
    padding-top: 10px;
    padding-bottom: 10px;

    img { max-height: 30px; }
  }
}


/*
 * Dropdown opening animation
 */
.navbar-nav > li > .dropdown-menu {
  animation: dropdown 0.2s ease-in 0s;
}
@keyframes dropdown {
  0% {
    opacity: 0;
    transform: translate(0, -10px);
  }
  100% {
    opacity: 1;
    transform: translate(0, 0);
  }
}


/*
 * Mega dropdown menu
 */
.navbar-nav > li > .mega-dropdown-menu {
  background-color: #fff;
}
.mega-dropdown-menu .row {
  display: flex;
  flex-wrap: wrap;
}
.mega-dropdown-menu .row > li {
  @extend .col-sm-3, .col-md-2;
  margin-bottom: 20px;

  &:hover {
    .mega-dropdown-text h3 { color: $brand-primary; }
    .mega-dropdown-image { transform: scale(1.05); }
    .mega-dropdown-image img { border-color: $gray-lighter; }
  }
}
.mega-dropdown-menu .row > li a {
  color: inherit;
  text-decoration: none;
}
.mega-dropdown-image {
  position: relative;
  height: 0;
  padding-bottom: 100%;
  margin-bottom: 15px;
  transition: all 0.4s ease-in-out 0s;

  img {
    @extend .img-contain, .img-center;
    border: 5px solid transparent;
  }
}
.mega-dropdown-text h3 {
  @extend .text-center;
  margin-top: 0;
  font-size: $font-size-base;
  font-weight: 400;
}
.mega-dropdown-menu .row > li ul {
  list-style: none;
  padding-left: $grid-gutter-width/2;
  font-size: $font-size-small;
}
.mega-dropdown-menu .row > li ul li {
  position: relative;
  padding-left: 15px;

  &:before {
    @extend .fa;
    content: "\f0da";
    display: block;
    position: absolute;
    left: 0;
    font-size: $font-size-base;
  }
  > a {
    color: inherit;
    text-decoration: none;

    &:hover { color: $link-hover-color; }
  }
}


/*
 * Static content wrapper
 */
#static-wrap > .container {
  margin-top: 40px;
  margin-bottom: 40px;
}


/*
 * Storefront and content wrappers
 */
#store-wrap { }
#categories-wrap { display: none; }
#products-wrap { }
#products-wrap .category-banner { display: none; }
#product-detail-wrap { }
#search-panel-wrap { }

/* Slightly darker right column on medium and up */
@media (min-width: $screen-md-min) {
  #product-detail-wrap {
    background-image: linear-gradient(to right, $body-bg, $body-bg calc((100% - 970px) / 2 + 646px), $bg-tone calc((100% - 970px) / 2 + 646px), $bg-tone);
  }
}
@media (min-width: $screen-lg-min) {
  #product-detail-wrap {
    background-image: linear-gradient(to right, $body-bg, $body-bg calc((100% - 1170px) / 2 + 877px), $bg-tone calc((100% - 1170px) / 2 + 877px), $bg-tone);
  }
}

/*
 * Search panel with search form
 */
#search-panel-wrap { background-color: $bg-tone; }
.search-panel .search-form { @extend .container; }


/*
 * Containers for product list and product grid
 */
.products {
  @extend .container;
  padding-top: 20px;
  padding-bottom: 20px;
}
.product-list { }
.product-grid { @extend .row; }
.product-grid > ul {
  list-style: none;
  padding-left: 0;
  margin-bottom: 0;
}


/*
 * Products in product grid
 */
.product-grid .product {
  @extend .col-xs-6, .col-sm-4, .col-md-3;
  margin-bottom: 10px;

  &:hover {
    a { border-color: $gray-lighter; }
    .product-image { transform: scale(1.05); }
    .buy-now .btn {
      @extend .btn-danger;
      border: 0;
      border-radius: 0;
    }
  }
}
.product-grid .product a {
  display: block;
  position: relative;
  padding: 10px 10px 80px;
  border: 5px solid transparent;
  color: inherit;
  text-decoration: none;
  transition: all 0.2s ease-in-out 0s;
}

/* Product image and text */
.product-grid .product-image {
  position: relative;
  height: 0;
  padding-bottom: 100%;
  transition: all 0.4s ease-in-out 0.2s;

  img { @extend .img-contain, .img-center; }
}
.product-grid .product-text {
  height: 2.2em;
  overflow: hidden;
  margin-top: 10px;
  text-align: center;
}
.product-grid .product-text h3 {
  margin: 0;
  font-size: $font-size-base;
  font-weight: normal;

  .small { font-size: inherit; }
}
.product-grid .product-text .description { display: none; }

/* Product promotions */
.product-grid .promotions {
  position: absolute;
  top: 5px;
  left: 5px;
}
.product-grid .promotion {
  @extend .label, .label-danger;
  @include box-shadow(0 0 4px 4px rgba(255,255,255,1));
  display: inline-block;
  width: 40px;
  height: 40px;
  line-height: 40px;
  padding: 0;
  border-radius: 20px;
  font-size: $font-size-base;
}

/* Buy now widget and price */
.product-grid .buy-now {
  position: absolute;
  right: 20px;
  bottom: 5px;
  left: 20px;
}
.product-grid .buy-now-form { text-align: center; }
.product-grid .buy-now-form .btn {
  @extend .btn-default, .btn-block;
  font-size: 16px;
  border: 0;
  border-radius: 0;
  transition: all 0.4s ease-in-out 0s;
}
.product-grid .price {
  position: absolute;
  right: 0;
  bottom: 30px;
  left: 0;
  text-align: center;
  font-size: 20px;
  color: $gray-base;
}


/*
 * Products in product list
 */
.product-list .product-title { margin-bottom: 5px; }
.product-list .product-title a { color: inherit; }
.product-list .price {
  font-size: 16px;
  color: $gray-base;
}

/*
 * Product detail
 */
.product-detail {
  @extend .container;
  padding-top: 20px;
  padding-bottom: 20px;
}
.product-detail .product-body,
.product-detail .product-header,
.product-detail .product-footer { @extend .row; }

/* Product header with title */
.product-detail .product-header {
  position: relative;
  height: 200px;

  .actions {
    @extend .col-xs-12, .text-right;

    .btn {
      @extend .btn-sm;
      background-color: transparent;
      border-color: transparent;

      &:hover {
        background-color: $brand-primary;
        color: $body-bg;
      }
    }
  }
}
.product-detail .product-header .product-title {
  @extend .col-xs-12, .col-md-4, .col-md-offset-8, .col-lg-3, .col-lg-offset-9;
  @extend .text-center;
  position: absolute;
  right: 0;
  bottom: 20px;
  left: 0;
  margin-top: 40px;
  margin-bottom: 20px;
  font-size: $font-size-h3;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.1em;

  .small {
    display: block;
    font-size: $font-size-base;
    letter-spacing: 0.15em;
  }
}

/* Presentational images */
.product-detail .images.presentational {
  @extend .col-xs-12, .col-md-8, .col-lg-9;
  min-height: 400px;
  margin-top: -200px;
  margin-bottom: 20px;
}

/* On small viewports header and presentational images stack */
@media (max-width: $screen-sm-max) {
  .product-detail .product-header {
    height: auto;

    .product-title { position: static; }
  }
  .product-detail .images.presentational { margin-top: 0; }
  .product-detail .images.presentational img { margin: 0 auto; }
}

/* Product meta */
.product-meta {
  @extend .col-xs-12, .col-sm-8, .col-sm-offset-2;
  @extend .col-md-4, .col-md-offset-0, .col-lg-3;
  margin-top: 20px;
}
.product-meta .buy-now {
  margin-bottom: 20px;
  padding: $panel-body-padding;
  background-color: $bg-tone;
  border: 1px solid rgba(0,0,0,0.15);
  border-radius: $panel-border-radius;
}
.product-meta .product-code {
  position: absolute;
  top: -28px;
  padding: 5px 10px 6px;
  font-size: $font-size-small;
  background-color: $bg-tone;
  border-top: 1px solid rgba(0,0,0,0.15);
  border-right: 1px solid rgba(0,0,0,0.15);
  border-left: 1px solid rgba(0,0,0,0.15);
  border-top-left-radius: $panel-border-radius;
  border-top-right-radius: $panel-border-radius;
}
.product-meta .price {
  display: inline-block;
  margin-bottom: 0;
  font-size: $font-size-h1;
  font-weight: 400;
  letter-spacing: -0.02em;

  .fa {
    position: relative;
    top: -0.667em;
    font-size: $font-size-large;
    color: $brand-danger;
  }
  .unit-price {
    @extend .text-muted;
    display: inline-block;
    margin-left: 0.5em;
    font-size: $font-size-base;
    letter-spacing: normal;
  }
}
.product-meta .retail-price {
  margin-left: 1.5em;
  text-decoration: line-through;
}
.product-meta .order-form {
  margin-top: 20px;

  .btn { @extend .btn-lg, .btn-block, .btn-success; }
}
.product-meta .go-checkout .btn { @extend .btn-block; }

/* Variant products dropdown */
.product-meta .variant-products {
  margin-bottom: 20px;

  .btn { @extend .btn-block; }
  .dropdown-menu { @extend .dropdown-menu-right; }
  .dropdown-menu .media-heading {
    font-size: $font-size-h5;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .dropdown-menu .media-heading .small { display: block; }
}

.product-meta .product-stock .list-group-item {
  background-color: transparent;
  border-color: rgba(0,0,0,0.15);
}
.product-meta .product-stock .list-group-item span {
  @extend .badge;
}

/* Product description and properties */
.product-description {
  @extend .col-xs-12, .col-sm-8, .col-sm-offset-2;
  @extend .col-md-5, .col-md-offset-0, .col-lg-5;
  margin-bottom: 20px;
}
.product-properties {
  @extend .col-xs-12, .col-sm-8, .col-sm-offset-2;
  @extend .col-md-3, .col-md-offset-0, .col-lg-3;
  margin-bottom: 20px;
}

/* Technical images */
.product-detail .images.technical {
  @extend .col-xs-12, .col-sm-8, .col-sm-offset-2;
  @extend .col-md-4, .col-md-offset-0, .col-lg-3, .col-lg-offset-1;
}

/* Product image galleries */
.product-detail .images {
  position: relative;
}
.product-detail .images .nav {
  @extend .nav-pills;
  display: flex;
  justify-content: center;
  position: absolute;
  z-index: $zindex-navbar;
  right: 15px;
  bottom: 10px;
  left: 15px;
}
.product-detail .images .nav li {
  flex: 0 1 auto;

  > a {
    padding: 3px;
    border-radius: 15.5px;
  }
  > a img { @extend .img-circle; }
}
.product-detail .images .gallery {
  .image-link { display: block; }

  img {
    @extend .img-responsive;
    border: 5px solid transparent;
    transition: all 0.2s ease-in-out 0s;

    &:hover { border-color: $gray-lighter; }
  }
}

/* Product footer elements */
.product-footer .footer-header {
  @extend .col-xs-12, .col-sm-8, .col-sm-offset-2;
  @extend .col-md-8, .col-md-offset-0, .col-md-9;

  font-size: $font-size-h4;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}
.product-footer .requisite-products,
.product-footer .variant-products {
  @extend .col-xs-12, .col-sm-8, .col-sm-offset-2;
  @extend .col-md-8, .col-md-offset-0, .col-md-9;
}
.product-footer .variant-products .product a { padding-bottom: 10px; }


/*
 * Footer
 */
.footer { background-color: $gray-lighter; }
