$brand-primary: #93ca33;

$navbar-height: 60px;
$navbar-inverse-bg: #000;
$navbar-inverse-color: #cdcdcd;
$navbar-inverse-link-active-bg: darken($brand-primary, 10%);
$navbar-inverse-toggle-hover-bg: $brand-primary;
$navbar-inverse-toggle-border-color: #cdcdcd;

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

@mixin pacifico() {
  font-family: 'Pacifico';
  font-weight: normal;
  letter-spacing: 0;
}

.gto {
  background-image: linear-gradient(#000, $brand-primary 400px, lighten($brand-primary, 20%) 401px, $brand-primary 402px, #000);
  background-attachment: fixed;
  background-color: #000;
  overflow-y: scroll;
  padding-top: 60px;

  #main-nav {
    @extend .navbar-inverse;
    @include box-shadow(0 6px 12px 0 rgba(0,0,0,0.333));

    .navbar-brand {
      padding: 13px 15px;

      img { max-height: 40px; }
    }
  }

  #main {
    @include box-shadow(0 0 96px 12px #000);
    background-color: #000;
    color: #ddd;
  }

  .page-content {
    padding-top: 30px;
  }

  .search-panel {
  }

  .categories {
    margin-left: $grid-gutter-width/-2;
    margin-right: $grid-gutter-width/-2;

    > ul {
      display: flex;
      list-style: none;
      margin: 0;
      padding: 0;

      li.category {
        width: 10%;
        flex: 1 1 auto;
        position: relative;
        transition: all 0.2s ease-in-out 0s;

        &.active a:after {
          @include gradient-directional(rgba(255,255,255,0.25), rgba(255,255,255,0.85), 135deg);
          content: '';
          display: block;
          position: absolute;
          top: 0;
          bottom: 0;
          left: 0;
          right: 0;
        }

        a {
          display: block;
          text-decoration: none;
          background: #000;

          img {
            display: block;
            @extend .img-responsive;
          }
          p {
            z-index: 1;
            @include pacifico();
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            margin: 0;
            padding: 10px;
            background-color: rgba(0,0,0,0.667);
            color: #fff;
            font-size: 1.25em;
          }
        }
      }
    }
    .subcategories {
      clear: both;

      > ul { display: none; }
    }
  }

  .products {
    @extend .row;
    position: relative;
    margin-top: 20px;

    ul {
      display: flex;
      flex-wrap: wrap;
      align-content: flex-start;
      align-items: flex-end;
      list-style: none;
      margin: 0;
      padding: 0;

      li.product {
        @extend .col-xs-6, .col-sm-4, .col-md-3;
        position: relative;
        transition: all 0.2s ease-in-out 0s;

        a {
          @extend .thumbnail;
          @include box-shadow(0 0 1px 0 rgba(0,0,0,0.333));
          display: block;
          padding: 0;
          border: 0;
          border-top-left-radius: 0;
          border-top-right-radius: 0;
          background-color: #000;
          color: #ddd;

          &:hover {
            @include box-shadow(0 0 1px 1px $brand-primary);
            text-decoration: none;
          }
          .product-image {
            position: relative;
            overflow: hidden;
            width: 100%;
            height: 0;
            padding-bottom: 100%;

            img {
              position: absolute;
              left: 50%;
              top: 50%;
              transform: translate(-50%,-50%);
            }
            &:after {
              content: '';
              display: block;
              position: absolute;
              top: -6px;
              bottom: 0;
              left: -6px;
              right: -6px;
              @include box-shadow(0 0 18px rgba(255,255,255,0.65) inset);
            }
          }
          .product-text {
            padding: 10px 15px;

            h3 {
              @include pacifico();
              margin-top: 5px;
              margin-bottom: 5px;
              font-size: 22px;
              font-weight: normal;

              .small {
                display: block;
                font-family: 'Fira Sans';
              }
            }
            .description { display: none; }
          }
          .promotion { display: none; }
        }
        .buy-now { display: none; }
      }
    }
    .product-list {
      @extend .col-xs-12;
    }
  }

  .product-detail {
    position: relative;
    padding: 30px 0;

    .product-header {
      @extend .row;

      .product-title {
        @extend .col-xs-12, .col-md-7;
        @include pacifico();
        margin-top: 0;
        margin-bottom: 20px;

        .small {
          display: block;
          font-family: 'Fira Sans';
        }
      }
      .product-meta {
        @extend .col-xs-12, .col-md-5;
        margin-top: 8px;

        .product-actions {
          float: right;
          margin-left: 15px;

          .form-inline { display: inline-block; }
          .btn {
            display: inline-block;
            transition: all 0.2s ease-in-out 0s;
          }
        }
        .product-pricing { display: none; }
      }
    }
    .product-body {
      @extend .row;

      .product-description {
        @extend .col-xs-12, .col-md-3, .col-md-push-6;
        margin-top: 50px;

        .product-code { display: none; }
        .product-stock { display: none; }
        .body-text { clear: both; }
        .list-group, .table { margin-top: 20px; }
      }
      .iframes {
        @extend .hidden-print;
        position: absolute;
        left: -1*$grid-gutter-width;

        .iframe-toggle {
          @extend .btn-sm, .btn-primary;
          display: block;
          width: 3*$grid-gutter-width;
          font-weight: 500;
          text-align: right;
        }
      }
      .images {
        padding-bottom: 70px;

        .nav {
          @extend .hidden-print;
          position: absolute;
          left: $grid-gutter-width/2;
          bottom: 20px;

          > li > a { padding: 5px; }
        }
        .image {
          a {
            display: block;

            img {
              @extend .img-responsive;
              margin: 0 auto;
            }
          }
        }
        &.technical {
          @extend .col-xs-12, .col-sm-4, .col-md-3, .col-md-push-6;
        }
        &.presentational {
          @extend .col-xs-12, .col-sm-8, .col-md-6, .col-md-pull-6;
        }
      }
    }
    .product-footer { display: none; }
  }
  .footer {
    @include box-shadow(0 0 18px rgba(0,0,0,0.333) inset);
    background: darken($brand-primary, 15%);
    color: #fff;
  }
}
