.page-header
  = link_to admin_albums_path, class: 'btn btn-default' do
    = icon('chevron-circle-left', t('actions.back'))
  = link_to admin_album_path(@album), class: 'btn btn-primary' do
    = icon('info-circle', t('actions.show'))
  %h1
    = picture_variant_tag @album.cover_picture
    = @album

.row
  .col-md-6
    = render partial: 'form', locals: {locked: false}

  .col-md-6
    = render partial: 'admin/pictures/edit_collection', object: @album, as: :pictureable
    = render partial: 'admin/pictures/dropzone', object: @album, as: :pictureable
