#products-wrap
  .categories
    %ol.breadcrumb
      = render partial: 'categories/breadcrumb', collection: @category.self_and_ancestors, as: :category
  .products
    .page-header.visible-print
      %h1= @category.to_s
      %p.lead= @category.subtitle
    - if @category.filtering?
      .product-filter
        = render partial: 'products/filtering'
    #product-view{class: @view_mode, data: {'view-key': dom_id(@category)}}
      %ul{class: current_store.masonry? && 'masonry-grid'}
        = render @products
      .pagination
        = paginate @products

:coffee
  $('.category').deactivate()
  $("##{dom_id(@category)}").activate()
  $('.navbar-form').show()
