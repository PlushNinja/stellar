= bootstrap_form_for [:admin, @shipping_method] do |f|
  .panel.panel-default
    .panel-body
      %fieldset{disabled: locked}
        = f.text_field :name, required: true
        = f.select :shipping_gateway, Store.shipping_gateway_options, {help: t('.maps_api_reminder')}, {class: 'selectize'}
        = f.text_field :delivery_time, append: col(ShippingMethod, :delivery_time_unit), class: 'text-right'
        .row
          .col-md-6
            = f.text_field :enabled_at, data: {provide: 'datepicker', 'date-format': 'yyyy-mm-dd', 'date-language': I18n.locale}
          .col-md-6
            = f.text_field :disabled_at, data: {provide: 'datepicker', 'date-format': 'yyyy-mm-dd', 'date-language': I18n.locale}
        .row
          .col-md-6
            = f.select :shipping_cost_product_id, current_store.products.internal.map { |p| [p.to_s, p.id] }, {include_blank: blank}, {class: 'selectize'}
          .col-md-6
            = f.text_field :free_shipping_from, append: 'â‚¬', class: 'text-right'
        = f.select :detail_page_id, current_store.pages.primary.map { |p| [p.to_s, p.id] }, {include_blank: blank, help: t('.detail_page_help')}, {class: 'selectize'}
        ~ f.text_area :description
      - unless locked
        %fieldset.actions.fixed
          .container
            = f.primary

:coffee
  $('#shipping_method_description').summernote
    lang: "#{t('culture')}"
    toolbar: [
      ['para', ['style', 'ul', 'ol', 'paragraph']]
      ['font', ['bold', 'italic', 'clear']]
    ]
    dialogsFade: true
