#section-color-panel
  = bootstrap_form_for [:modify, :admin, section], remote: true, html: {id: dom_id(section, :colors), class: 'immediate'} do |f|
    %fieldset.pickr-controls
      .row
        .col-sm-4
          = f.text_field :background_color, class: 'color'
        .col-sm-4
          = f.text_field :gradient_color, class: 'color'

  = bootstrap_form_for [:modify, :admin, section], remote: true, html: {id: 'section-color-form', class: 'immediate'} do |f|
    = render partial: 'admin/gradients/form_fields', object: f, as: :f

  :coffee
    $('##{dom_id(section, :colors)}').find('.color').pickr()
