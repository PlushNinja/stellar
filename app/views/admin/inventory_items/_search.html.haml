.panel.panel-info
  .panel-heading
    %h4.panel-title= t('actions.search')
  .panel-body
    = form_for @search, url: admin_inventory_items_path, method: :get do |f|
      .row
        .col-sm-6.col-md-2
          .form-group
            = f.text_field :code, placeholder: col(InventoryItem, :code), class: 'form-control'
        .col-sm-6.col-md-2
          .form-group
            = f.select :inventory_id, current_store.inventories.map { |i| [i.to_s, i.id] }, {}, {multiple: true, placeholder: col(InventoryItem, :inventory_id), class: 'selectize'}
        .col-sm-6.col-md-4
          .form-group
            = f.select :product_id, [], {}, {multiple: true, placeholder: col(InventoryItem, :product_id), class: 'selectize-tall selectize-list-group', data: {inventory_items: @inventory_items.map(&:product), selected: @search.raw_options['product_id']}}
        .col-sm-3.col-md-2
          .form-group
            = f.select :live, Product.availability_options, {include_blank: t('admin.products.search.availability')}, {placeholder: t('admin.products.search.availability'), class: 'form-control selectize'}
        .col-sm-3.col-md-2
          .form-group
            = f.submit t('actions.search'), class: 'btn btn-block btn-primary'

:coffee
  $product = $('#inventory_item_search_product_id')
  inventory_items = $product.data 'inventoryItems'
  selected = $product.data 'selected'

  $product.selectize
    plugins: ['remove_button']
    dropdownParent: 'body'
    preload: true
    options: inventory_items
    items: selected
    valueField: 'id'
    sortField: [{field: 'title'}, {field: 'subtitle'}]
    searchField: ['code', 'customer_code', 'title', 'subtitle']
    diacritics: false
    render: $.fn.selectize.product_renderer
    load: (query, callback) ->
      $.ajax
        url: '#{query_admin_products_path}'
        type: 'GET'
        dataType: 'json'
        error: ->
          callback()
        success: (response) ->
          callback(response)
