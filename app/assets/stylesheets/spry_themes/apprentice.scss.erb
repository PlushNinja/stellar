/*
 * Theme specific styles
 */

$navbar-default-bg: #fff;
$navbar-default-color: #959595;
$brand-primary: darken(#afca08, 8%);

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

body {
  overflow-y: scroll;
  padding-top: 50px;
}

#main-nav {
  @include box-shadow(0 0 10px 0 #343434);

  > .content {
    @extend .container;
  }
}

#static-wrap {
  .container {
    margin-top: 20px;

    > .page-header { margin-top: 0; }
  }

  .product.snippet {
    @extend .thumbnail;
    display: block;
    position: relative;
    padding: 10px;
    border-radius: $border-radius-base;

    &:hover {
      @include box-shadow(0 0 1px 2px $brand-primary);
      text-decoration: none;
    }
    .product-image img { @extend .img-responsive; }
    .product-content {
      text-align: center;

      h3 {
        margin-top: 10px;
        margin-bottom: 10px;
        font-size: 17px;
        letter-spacing: -0.01em;

        .small {
          display: block;
          font-size: 14px;
        }
      }
      .product-description { display: none; }
      .promotion { text-align: center; }
    }
    .product-price {
      text-align: center;

      p {
        @extend .label, .label-primary;
        display: inline-block;
        margin-bottom: 0;
      }
    }
  }
}

#search-panel-wrap {
  @include gradient-vertical(rgba(255,255,255,0.8), rgba(255,255,255,0.333));

  .search-panel {
    @extend .container;
  }
}

#categories-wrap {
  position: relative;
  background-color: #343434;

  .categories {
    @extend .container;

    > ul {
      @extend .clearfix;
      list-style: none;
      padding: 15px 0;
      margin: 0;
      font-size: $font-size-small;

      > li.category {
        float: left;
        padding: 5px 0;
        margin-right: $grid-gutter-width;

        &.active {
          > a {
            color: #fff;
            border-bottom-color: $brand-primary;
          }
          > .subcategories-wrap { display: block; }
        }

        > a {
          display: block;
          padding: 0;
          text-align: left;
          text-decoration: none;
          color: #b6b6b6;
          font-weight: 500;
          text-transform: uppercase;
          border-bottom: 2px solid transparent;

          &:hover { color: #eee; }

          img { display: none; }
          p { margin: 0; }
        }

        .subcategories-wrap {
          display: none;
          position: absolute;
          left: 0;
          right: 0;
          bottom: 0;
          background-color: #fff;

          > .subcategories {
            @extend .container;
            padding-top: 5px;
            padding-bottom: 5px;

            > ul {
              @extend .nav, .nav-pills;

              > li {
                img { display: none; }
                p { margin: 0; }
              }
            }
          }
        }
      }
    }
  }
}

#products-wrap {
  position: relative;

  #products-view-toggle {
    position: absolute;
    right: $grid-gutter-width/2;
    top: -30px;

    button {
      @extend .btn, .btn-default, .btn-xs;
    }
  }
  .products {
    @extend .container;
    position: relative;
    margin-top: 40px;

    .product-grid {
      @extend .row;

      ul {
        display: flex;
        flex-wrap: wrap;
        align-content: flex-start;
        align-items: flex-end;
        list-style: none;
        padding-left: 0;

        li.product {
          @extend .col-xs-6, .col-sm-4, .col-md-3;
          position: relative;
          transition: all 0.2s ease-in-out 0s;

          a {
            @extend .thumbnail;
            display: block;
            padding: 10px 10px 40px;
            background-color: #fff;
            border-radius: $border-radius-base;

            &:hover {
              @include box-shadow(0 0 1px 2px $brand-primary);
              text-decoration: none;
            }
            .product-image {
              position: relative;
              overflow: hidden;
              width: 100%;
              height: 0;
              padding-bottom: 100%;

              img {
                position: absolute;
                left: 50%;
                top: 50%;
                transform: translate(-50%,-50%);
              }
            }
            .product-text {
              overflow: hidden;
              text-align: center;

              h3 {
                margin-top: 10px;
                margin-bottom: 10px;
                font-size: 17px;
                letter-spacing: -0.01em;

                .small {
                  display: block;
                  font-size: 14px;
                }
              }
              .description { display: none; }
            }
            .promotion { text-align: center; }
          }
          .buy-now {
            position: absolute;
            bottom: 30px;
            left: 25px;
            right: 25px;
            display: flex;
            justify-content: center;

            form {
              flex: 0 0 auto;

              button {
                @extend .btn-default;
                @include border-left-radius(0);
                height: 30px;
                border-left-width: 0;
                border-color: $brand-primary;
              }
            }
            p {
              @extend .label, .label-primary;
              @include border-right-radius(0);
              flex: 0 0 auto;
              font-size: 1em;
              line-height: 23px;
              margin-bottom: 0;
            }
          }
        }
      }
    }
  }
}

#product-detail-wrap {
  .product-detail {
    @extend .container;
    position: relative;
    padding-top: 30px;
    padding-bottom: 30px;

    .product-header {
      @extend .row;

      .product-title {
        @extend .col-xs-12, .col-md-7;
        margin-top: 0;
        margin-bottom: 20px;
        font-weight: 500;
      }
      .product-meta {
        @extend .col-xs-12, .col-md-5;
        margin-top: 8px;

        .product-actions {
          float: right;
          margin-left: 15px;

          .form-inline { display: inline-block; }
          .btn {
            display: inline-block;
            transition: all 0.2s ease-in-out 0s;
          }
        }
        .product-pricing {

          .price, .retail-price {
            float: right;
            margin-right: $grid-gutter-width/2;
            font-size: $font-size-large;
            line-height: 34px;

            .tax-rate {
              margin-left: 5px;
              color: $text-color;
              font-size: $font-size-small;
              letter-spacing: 0.05em;
              word-spacing: 0;
            }
            .unit-price {
              display: block;
              margin-top: -10px;
              font-size: $font-size-small;
              text-align: right;
            }
          }
          .price {
            @extend .text-primary;
            font-weight: 500;
          }
          .retail-price {
            opacity: 0.5;
            text-decoration: line-through;
          }
        }
      }
    }
    .product-body {
      @extend .row;

      .product-description {
        @extend .col-xs-12, .col-md-4;

        .product-code {
          @extend .pull-left;
          font-size: $font-size-small;
        }
        .product-stock {
          @extend .pull-right, .clearfix;
        }
        .body-text { clear: both; }
        .list-group, .table { margin-top: 20px; }
      }
      .images {
        padding-bottom: 70px;

        .nav {
          @extend .hidden-print;
          position: absolute;
          left: $grid-gutter-width/2;
          bottom: 20px;

          > li > a { padding: 5px; }
        }
        .image {
          a {
            display: block;

            img {
              @extend .img-responsive;
              margin: 0 auto;
            }
          }
        }
        &.technical {
          @extend .col-xs-12, .col-sm-4, .col-md-3;
        }
        &.presentational {
          @extend .col-xs-12, .col-sm-8, .col-md-5;
        }
      }
    }
    .product-footer {

      .requisite-products {
        @extend .row;

        ul {
          list-style: none;
          padding: 0;

          li.product {
            @extend .col-sm-2, .col-lg-1;

            a {
              display: block;
              text-decoration: none;

              .product-image { @extend .box-thumbnail; }

              h3 {
                font-size: $font-size-base;
                margin-top: 0.25em;
                margin-bottom: 0.5em;

                .small {
                  display: block;
                  font-size: $font-size-small;
                }
              }
            }
          }
        }
      }
    }
  }
}

.footer {
  background-color: #e3dfd7;

  > .content {
    @extend .container;
  }
}

@media print {
  #main-wrap {
    #products-wrap {
      .products {
        .product-grid {
          margin: 0;
          padding: 0;

          ul {
            display: block;

            li.product {
              display: block;
              width: 100%;
              max-width: 100%;
              padding: 10px 0;
              border-top: 1px solid #eee;
              page-break-inside: avoid;
              break-inside: avoid;

              &:first-child { border-top: 0; }

              a {
                display: block;
                padding: 0;
                border: 0;

                &:after {
                  content: '';
                  display: table;
                  clear: both;
                }

                .product-image {
                  float: left;
                  width: 200px;
                  height: 200px;
                  padding: 0;

                  img {
                    position: static;
                    display: block;
                    transform: none;
                    margin: 0 auto;
                  }
                }
                .product-text {
                  margin-left: 220px;
                  text-align: left;

                  .description { display: block; }
                }
                .promotion { display: none; }
              }
              .buy-now { display: none; }
            }
          }
        }
      }
    }
  }
}
