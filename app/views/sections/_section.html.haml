%section.section{id: dom_id(section), class: section.gutter}
  = render partial: 'sections/background_images', object: section, as: :section
  - if section.spread?
    = render partial: 'sections/content', object: section, as: :section
  - elsif section.jumbotron?
    .jumbotron
      .container
        .row
          = render partial: 'sections/content', object: section, as: :section
  - else
    .container
      .row
        = render partial: 'sections/content', object: section, as: :section
