.row
  .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
    .page-header
      %h1= t('.change_your_password')
    .panel.panel-default
      .panel-body
        = bootstrap_form_for resource, as: resource_name, url: password_path(resource_name), html: {method: :put} do |f|
          = f.hidden_field :reset_password_token
          = f.password_field :password, autofocus: true, autocomplete: 'new-password', label: t('.new_password')
          = f.password_field :password_confirmation, autocomplete: 'off', label: t('.confirm_new_password')
          .actions
            = f.primary t('.change_my_password')
    .links
      = render 'devise/shared/links'
