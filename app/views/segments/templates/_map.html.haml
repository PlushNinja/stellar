.segment-content.map{id: segment_content_id(map)}
  .map-container{data: {lat: map.map_latitude || 60.2495, lng: map.map_longitude || 24.0669, zoom: map.map_zoom || 10}}

:coffee
  jQuery ->
    $map = $('##{segment_content_id(map)}').find '.map-container'
    loc = {lat: parseFloat($map.data('lat')), lng: parseFloat($map.data('lng'))}
    map = new google.maps.Map($map[0],
      center: loc
      zoom: $map.data 'zoom'
      disableDefaultUI: true
      draggable: false
      scrollwheel: false
      gesturehandling: 'none'
    )
    marker = new google.maps.Marker(
      position: loc
      map: map
    )
