%section.section{class: section.layout, style: section.to_style}
  - if section.width
    .container
      .row
        %div{class: section.width_classes}
          .row
            = render partial: 'sections/section_segments', object: section.segments
  - else
    .container-fluid
      .row
        = render partial: 'sections/section_segments', object: section.segments
