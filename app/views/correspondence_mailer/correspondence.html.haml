= render partial: 'order_mailer/header'

%table.main{width: '100%', cellpadding: 0, cellspacing: 0}
  %tr
    %td.content-wrap.aligncenter
      %table{width: '100%', cellpadding: 0, cellspacing: 0}
        %tr
          %td.content-block
            %h1= @fields[:subject]
        %tr
          %td.content-block
            %table.invoice
              %tr
                %td
                  %table.invoice-items{width: '100%', cellpadding: 0, cellspacing: 5}
                    - @fields.each do |key, value|
                      %tr
                        %td= t(".#{key}")
                        %td
                          %b= value

= render partial: 'order_mailer/footer'
