= bootstrap_form_for [:admin, @group] do |f|
  .panel.panel-primary
    .panel-body
      %fieldset
        = f.select :parent_id, current_store.groups.map { |g| [g.to_path, g.id, data: {appearance: g.appearance}.to_json] }, {include_blank: true}, {class: 'selectize-label'}
        = f.text_field :name, required: true
    .panel-footer
      = f.primary

:coffee
  $('select.selectize-label').betterSelectize
    labelField: 'title'
    dataAttr: 'data'
    render: $.fn.selectize.label_renderer
