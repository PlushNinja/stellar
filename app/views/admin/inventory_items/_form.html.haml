= bootstrap_form_for [:admin, @inventory_item], layout: :horizontal,
    label_col: 'col-sm-4', control_col: 'col-sm-8' do |f|
  .panel.panel-default
    .panel-body
      %fieldset{disabled: locked}
        = f.text_field :code, required: true
        = f.text_field :on_hand, readonly: true
        = f.text_field :reserved, readonly: true
        = f.text_field :pending, readonly: true
      - unless locked
        %fieldset.actions
          = f.form_group do
            = f.primary
