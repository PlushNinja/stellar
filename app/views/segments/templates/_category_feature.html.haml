- resource = category_feature.resource
- images = category_feature.images.reverse
- sizing = category_feature.image_sizing

.segment-content.category_feature{id: segment_content_id(category_feature, context)}
  - if resource.present? && resource.is_a?(Category) && images.any?
    .image-container{class: sizing}
      = link_to show_category_path(resource) do
        = image_variant_tag images.pop, :lightbox
    - images.each do |image|
      .image-container.stacked{class: sizing}
        = image_variant_tag image, :lightbox
  - else
    = render partial: 'segments/placeholders/category_feature'
