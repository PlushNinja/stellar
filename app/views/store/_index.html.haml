= render @products

:coffee
  $('.product-detail').hide()
  $('.products').show()

  # if theme-specific scripts have added masonry, trigger reload on it
  if $('.products').hasClass 'masonry'
    $('.products').imagesLoaded -> this.masonry 'reload'

  if $(window).isSmall()
    $(window).scrollTo $('.products'), 300, offset: -70
