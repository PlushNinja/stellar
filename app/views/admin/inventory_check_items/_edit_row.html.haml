%tr[inventory_check_item]{class: inventory_check_item.appearance}
  %td= product_header inventory_check_item
  %td= inventory_check_item.lot_code
  %td= inventory_check_item.expires_at
  %td
    = form_for [:admin, inventory_check_item], remote: true,
        html: {class: 'pull-right immediate'} do |f|
      = f.number_field :amount, min: 1, max: 999, class: 'form-control input-sm text-right', tabindex: 1
  %td.actions
    = link_to icon('remove'), admin_inventory_check_item_path(inventory_check_item), remote: true, method: :delete, class: 'btn btn-danger btn-sm'
