= content_tag_for :li, category, class: @category.present? && @category.inside?(category) ? 'active' : nil do
  - cache [selected_group, I18n.locale, :category_link, category] do
    = link_to show_category_path(category), data: {push: 'partial', target: '#store-body'} do
      = picture_variant_tag category.cover_picture, :presentational
      %p= category.name
  .subcategories-wrap
    - if category.children.live.any?
      .subcategories
        %ul= render category.children.live
