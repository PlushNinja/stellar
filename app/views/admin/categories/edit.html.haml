.page-header
  = link_to admin_categories_path, class: 'btn btn-default' do
    = icon('chevron-circle-left')
    Back
  = link_to admin_category_path(@category), class: 'btn btn-primary' do
    = icon('info-circle')
    Show
  %h1
    = icon_image(@category)
    = @category

.row
  .col-sm-6
    = render 'form'

  .col-sm-6
    = render partial: 'admin/images/dropzone', object: @category, as: :imageable

    #images.list-group.gallery
      = render partial: 'admin/images/edit_image', collection: @category.images, as: :image
