- if values.any?
  %li.dropdown
    %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
      = property.name
      %span.caret
    %ul.dropdown-menu
      - values.each do |value|
        %li
          .checkbox
            %label
              = check_box_tag "product_search[#{param}][]", value, search.options[param].present? && search.options[param].include?(value)
              = value
              = property.measurement_unit
