- product.requisite_entries.each do |entry|
  %tr[entry]
    %td.hidden-print= drag_handle
    %td
      .product
        = link_to entry.requisite.title, admin_product_path(entry.requisite)
        %span.small= entry.requisite.subtitle
        .badge= entry.requisite.code
    %td.actions
      = link_to icon('remove'), admin_requisite_entry_path(entry), remote: true, method: :delete, class: 'btn btn-sm btn-outline-danger'
