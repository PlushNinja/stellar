.page-content
  = @page.content.html_safe if @page.content.present?

  - if @page.albums.any?
    .sidebar-toggle
      %button.btn.btn-primary.btn-sm{data: {toggle: 'sidebar'}}
        = icon('camera-retro', t('.included_albums'))

- if @page.albums.any?
  #sidebar.sidebar.sidebar-right
    .container.albums
      %ul.list-group
        = render partial: 'albums/gallery_item', collection: @page.albums, as: :album
