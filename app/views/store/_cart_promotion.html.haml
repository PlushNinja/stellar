- if products.any?
  .product-browser
    %h4.product-browser-header= t('.title')
    .product-grid.swiper-container
      %ul.swiper-wrapper
        = render partial: 'products/promoted_product', collection: products, as: :product, layout: 'shared/swiper_slide'
    .swiper-button-prev
    .swiper-button-next

  :coffee
    $('.product-browser .add-to-cart').checkAvailability()
    $('.product-browser .add-favorite > .btn').checkFavorites '#{favorites_path}'

    jQuery ->
      $swiper = $('#promoted-products .swiper-container')
      new Swiper $swiper,
        slidesPerView: 'auto'
        watchOverflow: true
        navigation:
          nextEl: '#promoted-products .swiper-button-next'
          prevEl: '#promoted-products .swiper-button-prev'
