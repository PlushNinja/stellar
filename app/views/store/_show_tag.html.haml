#products-wrap
  .context
    %ol.breadcrumb
      = render partial: 'tags/breadcrumb', collection: current_store.tags, as: :tag
  .products
    #product-view.product-grid{data: {url: show_tag_path(@tag)}}

:coffee
  $('#product-view').loadPartial().done ->
    $('.add-to-cart').checkAvailability()
    $('.add-favorite > .btn').checkFavorites '#{favorites_path}'
