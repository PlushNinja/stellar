/*
 * Theme specific styles
 */

$brand-primary: #29abe2;
$navbar-inverse-bg: #2d2d2d;
$navbar-inverse-color: #cdcdcd;
$navbar-inverse-link-color: #cdcdcd;
$navbar-inverse-toggle-hover-bg: #29abe2;
$navbar-inverse-toggle-border-color: #cdcdcd;

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

body.compass {
  overflow-y: scroll;
  padding-top: 70px;
  background-color: #e0e0e0;
}

#main-nav {
  @extend .navbar-inverse;
  @include box-shadow(0 1px 10px 0 rgba(0,0,0,.333));

  > .content {
    @extend .container;
    padding-top: 15px;    // padding the container only,
    padding-bottom: 5px;  // not the contained elements

    .navbar-brand {
      margin-top: -9px;
    }
  }
  .navbar-nav {
    > li {
      > a {
        margin-top: -15px;    // matches the container padding
        margin-bottom: -5px;
        padding-top: 30px;    // container padding + native 15px padding
        padding-bottom: 20px;
        text-transform: uppercase;
        font-size: $font-size-small;
      }

      &.active {
        background-color: $navbar-inverse-link-active-bg;
      }
    }
  }
  .navbar-form {
    .form-control {
      @extend .input-sm;
      max-width: 120px;
    }
  }
  .navbar-toggle {
    color: #cdcdcd;
  }
}

@media (max-width: $screen-sm-min) {
  body.compass { padding-top: 75px; }

  #main-nav {
    > .content {
      padding-top: 10px;
      padding-bottom: 10px;

      .navbar-brand {
        margin-top: -4px;
      }

      .navbar-nav {
        > li > a {
          margin-top: 0;
          margin-bottom: 0;
          padding-top: 10px;
          padding-bottom: 10px;
        }
      }
    }
  }
}

#main-wrap {
  background-color: transparent;

  > .content {
    @extend .container;
  }

  #static-wrap {
    > .wysiwyg-content {
      @extend .container;
      margin-top: 40px;
    }
  }

  #search-panel-wrap {
    .search-panel {
    }
  }

  #categories-wrap {
    background-color: #d0d0d0;

    .categories {
      @extend .container;

      > ul {
        @extend .clearfix;
        list-style: none;
        margin: 0;
        padding-left: 0;

        > li.category {
          float: left;
          position: relative;
          width: 20%;

          > a {
            display: block;
            text-decoration: none;
            background-color: #c4c4c4;
            color: #1c1c1c;
            transition: all 0.2s ease-in-out 0s;

            &:hover {
              background-color: #fff;
            }

            img { display: none; }
            p {
              margin: 0;
              padding: 10px 15px;
              white-space: nowrap;
            }
          }
        > .subcategories-wrap { display: none; }
        }
      }
    }
  }

  #products-wrap {
    .products {
      @extend .container;
      position: relative;

      .product-grid {
        ul {
          list-style: none;
          margin: 0;
          padding: 0;

          li.product {
            float: left;
            width: 220px;
            padding: 10px;
            margin-right: 5px;
            margin-bottom: 5px;
            background-color: #fff;
            transition: all 0.2s ease-in-out 0s;

            &:hover {
              @include box-shadow(0 0 5px 0 rgba(0,0,0,0.333));
              @include gradient-directional(rgba(250,250,250,1), rgba(255,255,255,0), 135deg);
            }
            a {
              display: block;

              &:hover { text-decoration: none; }
              .product-image {
                position: relative;

                img {
                  display: block;
                  margin: 0 auto;
                }
              }
              .product-text {
                text-align: center;
                color: #5f5f5f;

                h3 {
                  margin-top: 15px;
                  margin-bottom: 5px;
                  font-size: $font-size-large;
                  text-transform: uppercase;
                }
                .description {
                  position: relative;
                  max-height: 80px;
                  overflow: hidden;
                  font-size: $font-size-small;

                  &:after {
                    @include gradient-vertical(rgba(255,255,255,0), rgba(255,255,255,1));
                    content: "";
                    position: absolute;
                    left: 0;
                    right: 0;
                    bottom: 0;
                    height: 30px;
                  }
                }
              }
            }
            .buy-now {
              margin-top: 15px;
              text-align: center;

              p {
                @extend .lead;
                color: #5f5f5f;
              }
              form {
                button {
                  width: 50%;
                  background-color: #343434;
                  border-color: #000;
                  transition: all 0.2s ease-in-out 0s;

                  &:hover {
                    background-color: $brand-primary;
                    border-color: $link-color;
                  }
                }
              }
            }
          }
        }
      }
    }
  }

  #product-detail-wrap {
    background: #1c1c1c;
    color: #b8b8b8;

    .product-detail {
      @extend .container;
      position: relative;
      padding-bottom: 240px;

      .product-header {
        @extend .row;
        color: #ddd;

        .product-title {
          @extend .col-xs-12;
          margin-top: 0;
          margin-bottom: 30px;
          padding-top: 60px;
          font-weight: 500;
          text-transform: uppercase;

          .small {
            position: absolute;
            top: 40px;
            left: $grid-gutter-width/2;
            font-size: $font-size-small;
          }
        }
        .product-meta {
          position: absolute;
          top: 30px;
          left: 30px;
          right: 30px;

          .product-actions {
            float: right;

            .form-inline, .btn { display: inline-block; }
            .form-inline .form-group { margin: 0; }
            .btn {
              @extend .btn-default;
              color: #ddd;
              background: transparent;
              transition: all 0.2s ease-in-out 0s;

              &:hover {
                background-color: $brand-primary;
                border-color: $link-color;
                color: #fff;
              }
            }
          }
          .product-pricing {

            .price, .retail-price {
              float: right;
              margin-right: $grid-gutter-width/2;
              font-size: $font-size-large;
              line-height: 34px;

              .tax-rate {
                margin-left: 5px;
                color: $text-color;
                font-size: $font-size-small;
                letter-spacing: 0.05em;
                word-spacing: 0;
              }
              .unit-price {
                display: block;
                margin-top: -10px;
                font-size: $font-size-small;
                text-align: right;
              }
            }
            .price {
              color: #fff;
              font-weight: 500;
            }
            .retail-price {
              opacity: 0.5;
              text-decoration: line-through;
            }
          }
        }
      }
      .product-body {
        @extend .row;

        .product-description {
          @extend .col-xs-12, .col-md-3;

          .product-code {
            @extend .pull-left;
            font-size: $font-size-small;
          }
          .product-stock {
            @extend .pull-right, .clearfix;
          }
          .body-text { clear: both; }
          .list-group {
            margin-top: 20px;

            .list-group-item {
              background: transparent;
              color: inherit;

              &:hover { color: #fff; }
            }
          }
          .table { margin-top: 20px; }
        }
        .iframes {
          @extend .col-xs-12, .col-md-4;

          iframe {
            width: 100%;
            height: 640px;
          }
        }
        .images {
          padding-bottom: 50px;

          .nav {
            @extend .hidden-print;
            position: absolute;
            left: $grid-gutter-width/2;
            bottom: 0;

            > li > a { padding: 5px; }
          }
          .image {
            a {
              display: block;

              img {
                @extend .img-responsive;
                margin: 0 auto;
              }
            }
          }
          &.presentational {
            @extend .col-xs-12, .col-md-5;
          }
          &.technical {
            @extend .well;
            position: absolute;
            left: 0;
            bottom: 20px;
            height: 200px;
            width: 100%;
            overflow-y: hidden;
            overflow-x: auto;
            padding: 0 $grid-gutter-width/2;
            background: #e0e0e0;
            @include box-shadow(inset 0 0 10px rgba(0,0,0,0.333));

            .nav { display: none; }
            .gallery {
              display: table;

              .image {
                display: table-cell;
                padding: 15px;
                img { max-height: 170px; }
                &.fade { opacity: 1; }
              }
            }
          }
        }
      }
    }
  }
}

.footer {
  background: darken($brand-primary, 35%);
  color: $brand-primary;

  & > .content {
    @extend .container;
  }
}
