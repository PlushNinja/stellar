- if @navbar_search

  = form_tag search_path, method: :get, id: 'navbar-search', class: 'navbar-form navbar-right', data: {push: 'partial', target: '.products'}, role: 'search' do
    .form-group.has-feedback
      = search_field_tag 'q[keyword_cont]', nil, autocomplete: 'off', class: 'form-control', placeholder: t('search_panel.keyword'), required: true
      %span.form-control-feedback= icon('search')
      %ul.dropdown-menu.media-list.search-results

  :coffee
    $('#q_keyword_cont').on 'keyup', (e) ->
      $.get '#{search_path}?i=1&q[keyword_cont]=' + encodeURIComponent($(this).val())
