/*
 * Theme specific styles
 */

$body-bg:         #fff;
$brand-primary:   #3472f7;
$brand-success:   #05ae0e;
$brand-info:      #2ca8ff;
$brand-warning:   #ff9500;
$brand-danger:    #ff3b30;

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";


/*
 * mega dropdown menu
 */
.navbar-nav > li > .mega-dropdown-menu {
  background-color: #fff;
}

.mega-dropdown-menu .row {
  display: flex;
  flex-wrap: wrap;
}
.mega-dropdown-menu .row > li {
  @extend .col-sm-3, .col-md-2;
  margin-bottom: 20px;

  &:hover {
    .mega-dropdown-text h3 { color: $brand-primary; }
    .mega-dropdown-image { transform: scale(1.05); }
  }
}
.mega-dropdown-menu .row > li a {
  color: inherit;
  text-decoration: none;
}
.mega-dropdown-image {
  position: relative;
  height: 0;
  padding-bottom: 100%;
  margin-bottom: 15px;
  transition: all 0.4s ease-in-out 0s;

  img {
    @extend .img-contain, .img-center, .img-circle;
  }
}
.mega-dropdown-text {
  h3 {
    margin-top: 0;
    font-size: $font-size-base;
  }
}
.mega-dropdown-menu .row > li ul {
  list-style: none;
  padding-left: $grid-gutter-width/2;
  font-size: $font-size-small;
}
.mega-dropdown-menu .row > li ul li {
  position: relative;
  padding-left: 1em;

  &:before {
    @extend .fa;
    content: "\f0da";
    display: block;
    position: absolute;
    left: 0;
    font-size: $font-size-base;
  }

  > a {
    color: inherit;
    text-decoration: none;

    &:hover { color: $link-hover-color; }
  }
}

/*
  storefront wrapper with contained elements in source order
*/
#store-wrap {
  margin-top: 20px;
  padding-bottom: 20px;
}

.store-sections {}
#categories-wrap { display: none; }
#products-wrap { @extend .container; }
#product-detail-wrap { @extend .container; }

.images.presentational {
  @extend .col-xs-12, .col-sm-7, .col-md-8, .col-lg-9;
}
.product-meta {
  @extend .col-xs-12, .col-sm-5, .col-md-4, .col-lg-3;
}
.product-description {
  @extend .col-xs-12, .col-sm-12, .col-md-12, .col-lg-6;
}
.product-properties {
  @extend .col-xs-12, .col-sm-6, .col-md-6, .col-lg-3;
}
.images.technical {
  @extend .col-xs-12, .col-sm-6, .col-md-6, .col-lg-3;
}

#products-wrap .category-banner { display: none; }

/*
 * containers for product list and product grid
 */
.products { @extend .row; }
.product-list { @extend .col-xs-12; }
.product-grid > ul {
  list-style: none;
  padding-left: 0;
  margin-bottom: 0;
}

/*
 * products in product grid
 */
.product-grid .product {
  @extend .col-xs-6, .col-sm-4, .col-md-4, .col-lg-3;
  margin-bottom: 10px;

  &:hover {
    a { border-color: $gray-lighter; }
    .product-image { transform: scale(1.05); }
    .buy-now .btn {
      @extend .btn-danger;
      border: 0;
      border-radius: 0;
    }
  }
}
.product-grid .product a {
  display: block;
  position: relative;
  padding: 10px 10px 80px;
  border: 5px solid transparent;
  color: inherit;
  text-decoration: none;
  transition: all 0.2s ease-in-out 0s;
}

/*
 * product image and text
 */
.product-image {
  position: relative;
  height: 0;
  padding-bottom: 100%;
  transition: all 0.4s ease-in-out 0.1s;

  img { @extend .img-contain, .img-center; }
}
.product-text {
  height: 2.2em;
  overflow: hidden;
  margin-top: 10px;
  text-align: center;
}
.product-text h3 {
  margin: 0;
  font-size: $font-size-base;
  font-weight: normal;

  .small { font-size: inherit; }
}
.product-text .description { display: none; }

/*
 * product promotions
 */
.product .promotions {
  position: absolute;
  top: 5px;
  left: 5px;
}
.product .promotion {
  @extend .label, .label-danger;
  @include box-shadow(0 0 4px 4px rgba(255,255,255,1));
  display: inline-block;
  width: 40px;
  height: 40px;
  line-height: 40px;
  padding: 0;
  border-radius: 20px;
  font-size: $font-size-base;
}

/*
 * buy now widget and price
 */
.product .buy-now {
  position: absolute;
  right: 20px;
  bottom: 5px;
  left: 20px;
}
.product .price {
  position: absolute;
  right: 0;
  bottom: 30px;
  left: 0;
  text-align: center;
  font-size: 20px;
  color: $gray-base;
}
.product .buy-now-form { text-align: center; }
.product .buy-now-form .btn {
  @extend .btn-default, .btn-block;
  font-size: 16px;
  border: 0;
  border-radius: 0;
  transition: all 0.2s ease-in-out 0s;
}
