.page-header
  = link_to new_category_path, class: 'btn btn-primary' do
    = icon(:plus)
    New Category
  %h1 categories

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Parent category
        %th Name
        %th
        %th
        %th

    %tbody
      - @categories.each do |category|
        %tr
          %td= category.parent_category
          %td= category.name
          %td= link_to 'Show', category
          %td= link_to 'Edit', edit_category_path(category)
          %td= link_to 'Delete', category, data: {confirm: 'Are you sure?'}, method: :delete
