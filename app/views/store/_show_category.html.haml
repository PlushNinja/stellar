#products-wrap
  .context
    %ol.breadcrumb
      = render partial: 'categories/breadcrumb', collection: @category.self_and_ancestors, as: :category
    - if current_store.category_order?
      .category-order-toggle
        = link_to show_category_order_path(@category, params.permit([:page]).to_h), class: 'btn btn-default' do
          = icon('list-ul', t('.category_order'))
    = render partial: 'view_selector'
  .products
    .page-header.visible-print
      %h1= @category.to_s
      %p.lead= @category.subtitle

    #product-view{class: @view_mode, data: {'view-key': dom_id(@category)}}
      = render partial: 'products/grid_view', object: @products, as: :products, locals: {grid_type: current_store.masonry? ? 'staggered-grid' : 'straight-grid'}

    - if @category.filtering?
      .product-filter
        = render partial: 'products/filtering'

:coffee
  $('.add-to-cart').checkAvailability()
  $('.add-favorite > .btn').checkFavorites '#{favorites_path}'
