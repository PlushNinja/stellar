#products-wrap
  .context
    %ol.breadcrumb
      - current_store.promotions.live.each do |promotion|
        %li{class: promotion == @promotion && 'active'}
          = link_to promotion, show_promotion_path(promotion)
  .products
    .page-header.visible-print
      %h1= @promotion.to_s
    #product-view.product-grid{data: {url: show_promotion_path(@promotion)}}

:coffee
  $('#product-view').loadPartial().done ->
    $('.add-to-cart').checkAvailability()
    $('.add-favorite > .btn').checkFavorites '#{favorites_path}'
