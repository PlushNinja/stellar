.segment-content.picture{id: segment_content_id(picture, context)}
  - if picture.images.any?
    - if picture.images.count > 1
      .swiper-container
        .swiper-wrapper
          - picture.images.each do |image|
            .swiper-slide
              = image_variant_tag image, :lightbox

      :coffee
        jQuery ->
          $segment = $('##{segment_content_id(picture, context)}')
          $swiper = new Swiper $segment.find('.swiper-container'),
            autoplay: 5000
            loop: true
            effect: 'fade'
    - else
      .image-container
        = image_variant_tag picture.cover_image, :lightbox

  - else
    = placeholder :picture
