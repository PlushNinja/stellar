.container
  %button.offcanvas-toggle{type: 'button', data: {toggle: 'offcanvas', target: '#side-nav'}}
    = icon('bars')
  .navbar-header
    = link_to branding(current_store), root_url(host: (current_hostname.domain_hostname || current_hostname).fqdn), class: 'navbar-brand'
  - unless current_store.detach_menu?
    %ul.nav.navbar-nav.responsive
      = render partial: @header.children.live, locals: {navmenu: false}
    %ul.nav.navbar-nav.navbar-right
      = yield :main_nav_right
  %ul.nav.navbar-nav.navbar-right
    = render partial: 'shared/navbar_charms'
  %ul.nav.navbar-nav.navbar-right.responsive
    - if user_signed_in? && !current_user.guest?
      %li.dropdown
        %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
          %span.label{class: "label-#{current_user.appearance}"}= icon('user')
          = current_user.name.split.first
          %span.caret
        %ul.dropdown-menu.dropdown-menu-right{role: 'menu'}
          - if can_manage?
            = render partial: 'shared/admin_menu'
          - if current_user.can_select_pricing_group?
            = render partial: 'shared/pricing_options'
          = render partial: 'shared/user_menu'
    - else
      %li.lg= link_to icon('sign-in'), new_user_session_path
  = render partial: 'shared/keyword_search'
