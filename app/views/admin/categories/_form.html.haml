= bootstrap_form_for [:admin, @category], layout: :horizontal,
    label_col: 'col-sm-4', control_col: 'col-sm-8' do |f|
  .panel.panel-default
    .panel-body
      %fieldset{disabled: locked}
        = f.select :parent_id, current_store.top_level_category_options(@category), {include_blank: blank}, {class: 'selectize'}
        = f.text_field :name, required: true
        = f.select :banner_id, current_store.pages.banner.map { |p| [p.to_s, p.id] }, {include_blank: blank}, {class: 'selectize'}
        = f.select :product_scope, Product.sorting_scopes.map { |s| [Product.human_attribute_value(:sorting, s), s] }, {}, {class: 'selectize'}
        = f.form_group do
          = f.check_box :live
        = f.form_group do
          = f.check_box :hidden
      - unless locked
        %fieldset.actions
          = f.form_group do
            = f.primary
