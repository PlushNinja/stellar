/*
 * Theme specific styles
 */

$brand-primary: #e6172b;

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

.hiustalo {
  padding-top: $navbar-height + 4;
  overflow-y: scroll;
  background-image: url(<%= asset_path('hiustalo-bg.jpg') %>);
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-size: cover;

  #main-nav {
    @include box-shadow(0 6px 24px 0 rgba(0,0,0,0.333));
    background: rgba(255,255,255,0.88);
    border-top: 4px solid #000;
  }
  #main {
    background: transparent;
    @include gradient-vertical(rgba(255,255,255,1), rgba(255,255,255,0));
  }

  .container {
    margin-left: 0;
    margin-right: 0;
    padding-left: $grid-gutter-width;
    padding-right: $grid-gutter-width;
    width: auto;
  }

  .page-content {
    padding-top: 30px;
  }

  .categories {
    @extend .row;
    margin-bottom: 20px;
    padding: 20px 0 0;

    ul {
      list-style: none;
      margin: 0;
      padding: 0;

      li.category {
        @extend .col-xs-2;
        min-width: 240px;
        margin-bottom: 15px;

        &.active a {
          @extend .btn-primary;
        }
        a {
          @extend .btn, .btn-default;
          width: 100%;
          outline: 0 !important;
          transition: all 0.2s ease-in-out 0s;

          img { display: none; }
          p { margin: 0; }
        }
      }
    }
  }

  .products {
    @extend .row;
    position: relative;
    margin-top: 20px;

    ul {
      display: flex;
      flex-wrap: wrap;
      align-content: flex-start;
      list-style: none;
      margin: 0;
      padding: 0;

      li.product {
        @extend .col-xs-6, .col-sm-4, .col-md-3, .col-lg-2;
        max-width: 230px;
        position: relative;
        margin-bottom: 20px;

        a {
          @include box-shadow(0 0 3px 0 rgba(0,0,0,0.333));
          display: block;
          padding: 10px 10px 50px;
          background: #fff;
          transition: all 0.2s ease-in-out 0s;

          &:hover {
            @include box-shadow(0 0 6px 0 rgba(0,0,0,0.666));
            text-decoration: none;
          }
          .product-image {
            position: relative;
            height: 200px;

            img {
              position: absolute;
              top: 0;
              bottom: 0;
              left: 0;
              right: 0;
              margin: auto;
            }
          }
          h3 {
            font-size: $font-size-base;
            margin-top: 0.5em;
            margin-bottom: 0.5em;

            .small {
              display: block;
              font-size: $font-size-small;
            }
          }
          .description { display: none; }
        }
        .buy-now {
          position: absolute;
          height: 40px;
          left: 15px;
          right: 15px;
          bottom: 0;
          padding: 10px;
          background: $gray-dark;

          p {
            margin: 0 0 0 $grid-gutter-width;
            color: #fff;
            font-weight: 500;
          }
          .form-inline {
            position: absolute;
            left: 10px;
            top: 10px;
            padding: 0;

            button {
              @extend .btn-xs, .btn-default;
            }
          }
        }
      }
    }
  }

  .product-detail {
    @extend .row;

    .product-header {
      @extend .col-xs-12;
      @extend .col-sm-10, .col-sm-offset-1;
      @extend .col-lg-8, .col-lg-offset-2;

      .product-title {
        @extend .col-xs-12;
        margin: 10px 0;
        height: 40px;
        overflow: hidden;
      }
      .product-meta {
        @extend .col-xs-12;
        @extend .col-sm-6, .col-sm-offset-6;
        position: absolute;
        top: 93px;
        right: 15px;
        z-index: 3;

        .product-actions {
          float: right;

          .form-inline { display: inline-block; }
        }
        .product-pricing {
          float: right;
          margin-right: $grid-gutter-width/2;

          p {
            @extend .lead;
            @extend .text-primary;
            margin: 0;
            line-height: 34px;
          }
          .unit-price {
            @extend .small, .text-right;
          }
        }
      }
    }
    .product-body {
      @extend .col-xs-12;
      @extend .col-sm-10, .col-sm-offset-1;
      @extend .col-lg-8, .col-lg-offset-2;
      @include box-shadow(0 0 3px 0 rgba(0,0,0,0.666));
      border-top: 3px solid #000;
      background: #fff;
      padding-top: 30px;
      padding-bottom: 30px;

      .product-description {
        @extend .col-sm-6, .col-sm-push-6;
        @extend .col-xs-12;
        margin-top: 80px;

        .product-code {
          @extend .text-right;
          font-size: 90%;
        }
        .product-stock { display: none; }
        .body-text { text-align: justify; }
        .list-group, .table { margin-top: 20px; }
      }
      .images {
        position: relative;
        padding-bottom: 60px;

        &.technical { display: none; }
        &.presentational {
          @extend .col-sm-6, .col-sm-pull-6;
          @extend .col-xs-12;
        }
        .nav {
          @extend .hidden-print;
          position: absolute;
          left: $grid-gutter-width/2;
          bottom: 0;
        }
        .tab-content {
          .image {
            a {
              display: block;

              img {
                @extend .img-responsive;

                &:hover {
                  @include box-shadow(0 0 8px $link-color);
                }
              }
            }
            &:not(:first-child) {
              @extend .hidden-print;
            }
          }
        }
      }
    }
  }
}

.table tbody {
  background: #fff;
}

.footer {
  background: $brand-primary;
  color: lighten($brand-primary, 40%);
}
