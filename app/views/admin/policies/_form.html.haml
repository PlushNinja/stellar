= bootstrap_form_for [:admin, @policy] do |f|
  .panel.panel-default
    .panel-body
      %fieldset
        = f.text_field :title
        = f.form_group do
          = f.check_box :mandatory
          ~ f.text_area :content
          :coffee
            CKEDITOR.ClassicEditor.create(
              $('#policy_content')[0]
              language: '#{I18n.locale}'
            ).catch (error) -> console.log error

        %fieldset.actions.fixed
          .container
            = f.primary
