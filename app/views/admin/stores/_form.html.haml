= form_for [:admin, @store], html: {class: 'form-horizontal', role: 'form'} do |f|
  .panel.panel-default
    .panel-body
      = render 'shared/errors', object: @store

      .form-group
        = f.label :contact_person, class: 'col-sm-4 control-label'
        .col-sm-8
          = f.select :contact_person_id,
              @store.users.by_role(:store_manager).map { |u| [u.name, u.id] },
              {}, {class: 'select2 form-control'}
          %p.help-block
            A person who is a
            %span.label.label-default store manager
      .form-group
        = f.label :erp_number, 'ERP number', class: 'col-sm-4 control-label'
        .col-sm-8
          = f.text_field :erp_number, class: 'form-control'
      .form-group
        = f.label :name, class: 'col-sm-4 control-label'
        .col-sm-8
          = f.text_field :name, class: 'form-control'
      .form-group
        = f.label :slug, 'Semantic name', class: 'col-sm-4 control-label import'
        .col-sm-8
          = f.text_field :slug, class: 'form-control', readonly: true
          %p.help-block
            %span.text-info ‚ùñ
            This field is autogenerated and used internally.
            The value shown is for reference only.
      .form-group
        = f.label :theme, class: 'col-sm-4 control-label'
        .col-sm-8
          = f.text_field :theme, class: 'form-control'
      .form-group
        .col-sm-offset-4.col-sm-8
          = f.submit class: 'btn btn-primary'
