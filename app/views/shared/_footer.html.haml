.container
  .row
    .col-xs-12.col-sm-5.col-sm-push-4.bordered
      - if @footer.present? && @footer.children.any?
        %nav.navmenu
          %ul.nav.navmenu-nav
            = render partial: @footer.children, locals: {offcanvas: true}
    .col-xs-8.col-sm-4.col-sm-pull-5
      .media
        .media-left
          .media-object.tall= image_tag('stellar-vertical.svg')
        .media-body
          %p.lead= t('footer.heading')
          = t('footer.body_html')
    .col-xs-4.col-sm-3
      - if current_store.try(:brand_image).present?
        .media
          .media-body
          .media-right
            .media-object= image_tag(current_store.brand_image)
