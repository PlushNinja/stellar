/*
 * Theme specific styles
 */

$brand-primary: lighten(#1a3476, 24%);
$navbar-inverse-bg: lighten(#1a3476, 8%);
$navbar-inverse-color: lighten(#1a3476, 45%);
$navbar-inverse-link-color: lighten(#1a3476, 55%);

@import "bootstrap-generators.scss";
@import "bootstrap-font-awesome.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

.lepola {
  overflow-y: scroll;
  background-color: lighten(#fab20b, 46%);
  background-image: url(<%= asset_path('lepola-bg.svg') %>);
  background-position: bottom left;
  background-repeat: no-repeat;
  background-size: 1000px 1000px;

  #main {
    background: transparent;
  }
  #main-nav {
    @extend .navbar-inverse;
  }

  .container {
    padding-left: $grid-gutter-width;
    padding-right: $grid-gutter-width;
    width: auto;
  }

  ul.categories {
    @extend .nav, .nav-pills;
    z-index: $zindex-navbar;
    position: fixed;
    left: 0;
    right: 0;
    top: $navbar-height;
    padding: 5px $grid-gutter-width/2;
    font-size: $font-size-small;
    background: #fff;
    border-bottom: 1px solid $brand-primary;

    li.category {
      a {
        border-radius: 18px;

        img { display: none; }
        p { margin: 0; }
      }
    }
  }

  ul.products {
    list-style: none;
    position: relative;
    padding: 0;

    li.product {
      @extend .img-thumbnail;
      position: absolute;
      width: 180px;
      padding: 10px;
      margin: 0 10px 10px 0;
      background: #fff;
      border-radius: $border-radius-base;

      &:hover {
        @include box-shadow(0 0 8px $brand-primary);
        a { text-decoration: none; }
      }
      h3 {
        margin: 0.5em 0 0;
        font-size: $font-size-base;

        .small {
          display: block;
          font-size: $font-size-small;
        }
      }
      .description, .buy-now {
        display: none;
      }
    }
  }

  .product-detail {
    @extend .row;

    .product-actions {
      @extend .col-xs-12;
      @extend .col-sm-6, .col-sm-push-6;
      @extend .col-md-5, .col-md-push-7;
      @extend .col-lg-4, .col-lg-push-8;
      @extend .text-right;

      .form-inline {
        display: inline-block;
      }
    }
    .product-title {
      @extend .col-xs-12;
      @extend .col-sm-6, .col-sm-pull-6;
      @extend .col-md-7, .col-md-pull-5;
      @extend .col-lg-8, .col-lg-pull-4;
      margin-top: 0;
      margin-bottom: 20px;
    }
    .product-description { display: none; }
    .images {
      &.technical {
        @extend .col-sm-4;
        @extend .col-sm-push-8;
      }
      &.presentational {
        @extend .col-sm-8;
        @extend .col-sm-pull-4;
      }
      .nav { display: none; }
      .tab-content {
        .image:not(:first-child) {
          @extend .hidden-print;
        }
      }
      img {
        @extend .img-responsive, .img-thumbnail;
      }
    }
  }
}

.footer {
  background: $navbar-inverse-bg;
  color: $navbar-inverse-color;
}
