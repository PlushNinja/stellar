.table-responsive
  %table.table.table-striped.table-hover.table-loose
    %thead
      %tr
        %th= col(InventoryItem, :code)
        %th= col(InventoryItem, :inventory_id)
        %th= col(InventoryItem, :product_id)
        %th.col-xs-1.text-right= col(InventoryItem, :on_hand)
        %th.col-xs-1.text-right= col(InventoryItem, :reserved)
        %th.col-xs-1.text-right= col(InventoryItem, :pending)
        %th.col-xs-1.text-right.currency Ã 
        %th.col-xs-1.text-right= col(InventoryItem, :value)
        %th.actions

    %tbody
      = content_tag_for :tr, @inventory_items do |inventory_item|
        %td= inventory_item.code
        %td= inventory_item.inventory.name
        %td
          %strong= inventory_item.product.title
          = inventory_item.product.subtitle
        %td.text-right= inventory_item.on_hand
        %td.text-right= inventory_item.reserved
        %td.text-right= inventory_item.pending
        %td.text-right.currency= humanized_money_with_symbol inventory_item.value
        %td.text-right.currency= humanized_money_with_symbol inventory_item.total_value
        %td.actions
          = link_to icon('info', t('actions.show')), admin_inventory_item_path(inventory_item), class: 'btn btn-default btn-sm'
