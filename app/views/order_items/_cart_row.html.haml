:ruby
  classes = [].tap do |c|
    c << 'warning text-warning' unless order_item.product.available?
    c << 'subrow' if order_item.is_subitem?
  end

= content_tag_for :tr, order_item, class: classes.join(' ') do
  %td
    - unless order_item.product.available?
      = icon('warning', data: {toggle: 'tooltip'}, title: col(Product, :not_live))
    %strong
      - if order_item.real? && order_item.live?
        = link_to order_item.product_title, show_product_path(order_item.product.category, order_item.product)
      - else
        = order_item.product_title
    = order_item.product_subtitle
    %span.label.label-primary= order_item.label
    - if order_item.product.shipping_notes.present?
      .small
        = icon('info-circle')
        = order_item.product.shipping_notes
    - if order_item.lead_time > 0
      .small
        = icon('warning')
        = t('store.cart.lead_time_warning', days: order_item.lead_time)
  %td.no-wrap
    - if order_item.real?
      = order_item.product_code
    - if order_item.product.vendor.present?
      .small
        = icon('truck')
        %strong= order_item.product.vendor.name
  %td.text-right
    = form_for order_item, remote: true, html: {class: 'pull-right immediate'} do |f|
      = f.number_field :amount, min: 1, max: 999, class: 'form-control input-sm text-right',
          disabled: order_item.is_subitem? || order_item.internal?
  %td.text-right.currency
    = humanized_money_with_symbol order_item.includes_tax? ? order_item.price_with_tax : order_item.price_sans_tax
  %td.text-right.currency
    = humanized_money_with_symbol order_item.includes_tax? ? order_item.subtotal_with_tax : order_item.subtotal_sans_tax
  %td.actions
    - unless order_item.is_subitem? || order_item.internal?
      = link_to icon('remove'), order_item_path(order_item), remote: true, method: :delete, class: 'btn btn-danger btn-sm'

- if order_item.adjustments.any?
  = render partial: 'adjustments/row', collection: order_item.adjustments, as: :adjustment, locals: {includes_tax: order_item.includes_tax?}
