- if @products.any?
  $('#search-dropdown').html("#{j render partial: 'products/search_dropdown', object: @products, as: :products}");
  $('#search-dropdown').show('fade', 150);
  $('#main-wrap').on('click', function() { $('#search-dropdown').hide('fade') });
  $('#navbar-search input').on('focus', function() { $('#search-dropdown').show('fade') });
- else
  $('#main-wrap').off('click');
  $('#navbar-search input').off('focus');
  $('#search-dropdown').hide('fade');
