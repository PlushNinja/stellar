.page-header
  = link_to admin_departments_path, class: 'btn btn-default' do
    = icon('chevron-circle-left', t('actions.back'))
  - if current_user.can_update?(Department)
    = link_to edit_admin_department_path(@department), class: 'btn btn-primary' do
      = icon('pencil-square', t('actions.edit'))
  %h1
    = icon('umbrella', @department.name)

.row
  .col-md-6
    = render partial: 'form', locals: {locked: true}
