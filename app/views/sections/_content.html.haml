.section-content{class: [section.width, section.viewport? && 'viewport', section.swiper? && 'swiper', section.reverse? && 'reverse']}
  .row
    = render partial: 'columns/column', collection: section.columns

  - if section.swiper?
    .column-pagination

    :coffee
      jQuery ->
        $section = $('##{dom_id(section)}')
        new Swiper $section.find('.swiper'),
          slideClass: 'column'
          wrapperClass: 'row'
          slidesPerView: 'auto'
          pagination:
            el: '.column-pagination'
