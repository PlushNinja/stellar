- if dropdown.children_count > 0
  - if navmenu
    %li{class: dropdown.always_expand? && 'mm-active'}
      %a.has-arrow{href: '#', role: 'button'}= dropdown
      %ul.nav.navmenu-nav
        - dropdown.children.visible(current_group).each do |child|
          = render partial: child.to_partial_path, object: child, locals: {navmenu: true}
  - else
    %li.dropdown
      = dropdown_toggle do
        = dropdown
        %span.caret
      %ul.dropdown-menu{role: 'menu'}
        - dropdown.children.visible(current_group).each do |child|
          = render partial: child.to_partial_path, object: child, locals: {navmenu: false}
