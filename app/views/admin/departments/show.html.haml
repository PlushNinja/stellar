.page-header
  = link_to admin_departments_path, class: 'btn btn-default' do
    = icon('chevron-circle-left', t('actions.back'))
  - if current_user.can_update?(@department, at: current_store)
    = link_to edit_admin_department_path(@department), class: 'btn btn-primary' do
      = icon('pencil-square', t('actions.edit'))
  - if @department.page.present?
    = link_to icon('file-o', t('.edit_page')), edit_admin_page_path(@department.page), class: 'btn btn-default'
  %h1
    = icon('umbrella', @department)

.row
  .col-md-6
    = render partial: 'form', locals: {locked: true}
  .col-md-6
    = render partial: 'admin/pictures/collection', object: @department, as: :pictureable
