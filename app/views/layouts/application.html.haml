!!!
%html
  %head
    = render partial: 'shared/metadata'
    %title= current_store
  %body{class: current_store.theme}
    %nav.navbar.navbar-default.navbar-fixed-top{role: 'navigation'}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{type: 'button', data: {toggle: 'collapse', target: '#navbar'}, aria: {expanded: 'false', controls: 'navbar'}}
            %span.sr-only Toggle navigation
            = icon('bars')
          = link_to root_path, class: "navbar-brand" do
            = image_variant_tag(current_store.cover_image)
        #navbar.collapse.navbar-collapse
          = render partial: 'shared/user_menu'
          = render partial: 'shared/storefront_nav'

    #main.container
      = yield

    #footer
      = render partial: 'shared/footer'

    .unobtrusive-flash-container
