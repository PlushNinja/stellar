/*
 * Theme specific styles
 */

$brand-primary: #99000f;
$navbar-default-link-active-bg: transparent;

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

body.stellar {
  overflow-y: scroll;
  padding-top: 80px;
}

#main-nav {
  @include box-shadow(0 0 6px 0 rgba(0,0,0,0.8));
  font-size: $font-size-small;
  font-weight: 500;

  > .content {
    @extend .container;
    padding-top: 15px;    // padding the container only,
    padding-bottom: 15px; // not the contained elements

    .navbar-brand {
      padding-top: 0;
      padding-bottom: 0;

      img {
        max-height: 50px;
        margin: 0;
      }
    }

    .navbar-nav {
      > li {

        &.active:before {
          content: '';
          position: absolute;
          left: 15px;
          right: 15px;
          bottom: 10px;
          border-bottom: 3px solid $brand-primary;
        }
      }
    }
    #navbar-search .form-control {
      @extend .input-sm;
      max-width: 120px;
    }
  }
}

/*
  on extra small screens the navbar will collapse, and we shrink the logo,
  and revert navbar links to original styles
*/
@media (max-width: $screen-sm-min) {
  body.stellar { padding-top: 75px; }

  #main-nav {
    > .content {
      padding-top: 10px;
      padding-bottom: 10px;

      .navbar-brand img {
        max-height: 30px;
        margin-top: 12px;
      }

      .navbar-nav {
        > li {
          margin-top: 0;
          padding-top: 0;

          &.active {
            background-color: darken($navbar-default-bg, 6.5%);
            &:before { display: none; }
          }
        }
      }
    }
  }
}

#main-wrap {

  > .content {
    @extend .container;
  }

  #static-wrap {
    margin-top: 40px;

    > .content {
      @extend .container;
    }
  }

  #search-panel-wrap {
    background-color: $brand-primary;

    .search-panel {
      @extend .container;
    }
  }

  #categories-wrap {
    @extend .clearfix;
    position: relative;
    z-index: 1;

    .categories {
      @extend .col-xs-8, .col-sm-6, .col-md-3, .col-lg-2;
      @extend .col-xs-push-4, .col-sm-push-6, .col-md-push-9, .col-lg-push-10;
      min-height: 400px;
      padding-top: 20px;
      padding-right: 0;
      background-color: rgba(255,255,255,0.9);

      > ul {
        @extend .nav, .nav-pills, .nav-stacked;
        font-size: $font-size-small;

        > li.category {

          &.active > a {
            background-color: transparent;
            background-image: url(<%= asset_path('leasit-bar.svg') %>);
            background-position: top left;
            background-size: cover;
          }
          &.active, &:hover {
            > .subcategories-wrap {
              max-height: 1000px; // transition needs a specific value
              opacity: 1;
            }
          }
          > a {
            border-radius: 0;
            font-weight: 500;

            img {
              @extend .box-icon;
              float: left;
              margin-right: 10px;
            }
            p {
              margin: 0;
              line-height: 25px;
              white-space: nowrap;
            }
          }
          > .subcategories-wrap {
            max-height: 0;
            opacity: 0;
            overflow: hidden;
            transition: all 0.8s ease-in-out 0s;

            > .subcategories {
              > ul {
                @extend .nav, .nav-pills, .nav-stacked;

                > li.category {
                  margin-top: 1px;

                  &.active > a {
                    background-color: transparent;
                    background-image: url(<%= asset_path('leasit-bar.svg') %>);
                    background-position: top right;
                    background-size: cover;
                  }
                  > a {
                    border-radius: 0;
                    padding-left: 50px;
                    margin-right: 15px;

                    img { display: none; }
                    p { margin: 0; }
                  }
                }
              }
            }
          }
        }
      }
    }
  }

  #category-banner-wrap {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;

    > .category-banner {
      > .jumbotron {
        height: 400px;
        background-size: cover;

        > .container {
          position: relative;
          height: 100%;
        }
      }
    }
  }

  #products-wrap {
    position: relative;

    #products-view-toggle {
      position: absolute;
      right: $grid-gutter-width/2;
      top: -30px;

      button {
        @extend .btn, .btn-link, .btn-xs;
      }
    }
    .products {
      @extend .container;
      margin-top: 40px;
      padding-bottom: 20px;

      .product-grid {

        > ul {
          @extend .row;
          list-style: none;
          padding-left: 0;
          margin-bottom: 0;
          border-right: 1px solid #ddd;

          li.product {
            @extend .col-xs-6, .col-sm-4, .col-md-3, .col-lg-2;
            border-left: 1px solid #ddd;

            &:hover a {
              h3 { color: $brand-primary; }
              img { transform: scale(1.05); }
            }
            a {
              display: block;
              margin-bottom: 20px;
              border-bottom: 1px solid #ddd;
              color: inherit;
              text-decoration: none;

              .product-image {
                img {
                  @extend .img-responsive;
                  transition: all 0.4s ease-in-out 0s;
                }
              }
              .product-text {
                h3 {
                  margin-top: 10px;
                  font-size: $font-size-large;

                  .small {
                    display: block;
                    text-transform: uppercase;
                  }
                }
                .description {
                  overflow: hidden;
                  max-height: 200px;
                  font-size: $font-size-small;
                }
              }
            }
            .buy-now { display: none; }
          }
        }
      }
    }
  }
}

.footer {
  > .content {
    @extend .container;
  }
}
