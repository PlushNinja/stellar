.row
  .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
    .page-header
      %h1= t('.forgot_your_password')
    .panel.panel-default
      .panel-body
        = bootstrap_form_for resource, as: resource_name, url: password_path(resource_name), html: {method: :post } do |f|
          = f.email_field :email, autofocus: true, autocomplete: 'email'
          .actions
            = f.primary t('.send_me_reset_password_instructions')
    .links
      = render 'devise/shared/links'
