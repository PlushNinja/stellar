= content_tag_for :tr, image do
  %td
    = image_variant_tag(image, :thumbnail,
        data: {toggle: 'popover', placement: 'left',
          content: "#{image_variant_tag(image, :matchbox)}"})
  %td
    = form_for [:admin, image], remote: true, html: {class: 'immediate form-horizontal'} do |f|
      .btn-group.btn-group-sm{'data-toggle' => 'buttons'}
        - image.applicable_image_types.each do |imagetype|
          %label.btn.btn-default{class: image.image_type == imagetype ? 'active' : nil}
            = f.radio_button :image_type_id, imagetype.id
            = imagetype
  %td.text-right
    = link_to icon('remove', 'Delete'), admin_image_path(image),
        remote: true, method: :delete, class: 'btn btn-sm btn-danger'
