= render partial: 'header'

.reports
  .report-panel
    = link_to admin_reports_path do
      = icon('eur')
      = t('admin.reports.inventory.title')

  .report-body
    %dl.dl-horizontal
      %dt= t('admin.reports.inventory.total_value')
      %dd= price_tag @inventory.total_value
      %dt= t('admin.reports.inventory.items')
      %dd= @inventory.items.size

= render partial: 'inventory_table'
