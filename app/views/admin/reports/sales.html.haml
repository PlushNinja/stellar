= render partial: 'header'

.reports
  .report-panel
    = link_to admin_reports_path do
      = icon('shopping-cart')
      = t('admin.reports.sales.title')

  .report-body
    %dl.dl-horizontal
      %dt= t('admin.reports.sales.total_value')
      %dd= price_tag @sales_data.total_value.to_money
      %dt= t('admin.reports.sales.total_items')
      %dd= @sales_data.total_items
      %dt= t('admin.reports.sales.products')
      %dd= @sales_data.by_product.keys.size

= render partial: 'sales_query'
= render partial: 'sales_chart'
= render partial: 'sales_table'
