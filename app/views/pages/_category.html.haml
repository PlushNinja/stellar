%li{class: active_link_to_class(category.path)}
  = link_to category.path do
    .page-image
      = image_variant_tag category.resource.cover_image, navmenu ? :icon : :matchbox
    .page-title
      = category
  - if category.children_count > 0
    %ul{class: navmenu && 'nav navmenu-nav'}
      = render partial: category.children, locals: {navmenu: navmenu}
