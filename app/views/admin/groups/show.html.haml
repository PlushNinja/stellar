.page-header
  = link_to admin_groups_path, class: 'btn btn-default' do
    = icon('chevron-circle-left', t('actions.back'))
  - if current_user.can_update?(@group, at: current_store)
    = link_to edit_admin_group_path(@group), class: 'btn btn-primary' do
      = icon('pencil-square', t('actions.edit'))
  %h1
    = icon('group', @group)

.row
  .col-md-6
    = render partial: 'form', locals: {locked: true}
