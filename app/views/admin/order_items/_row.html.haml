= content_tag_for :tbody, order_item do
  %tr
    %td{colspan: 2}
      %strong
        = link_to_if order_item.real? && order_item.live?, order_item.product_title, admin_product_path(order_item.product)
      = order_item.product_subtitle
      - if order_item.product.relationships.any?
        %span.caret
    %td.no-wrap
      - if order_item.real?
        = order_item.product_code
    %td.text-right
      - unless order_item.virtual?
        = order_item.amount
    %td.text-right.currency
      - unless order_item.virtual?
        = humanized_money_with_symbol order_item.price
    %td.text-right.currency
      = humanized_money_with_symbol order_item.subtotal

  = content_tag_for :tr, order_item.product.relationships do |relationship|
    %td.col-xs-1
    %td.text-muted
      %strong
        = link_to relationship.component.title, admin_product_path(relationship.component)
      = relationship.component.subtitle
    %td.no-wrap= relationship.component.code
    %td.text-right.text-muted= relationship.quantity * order_item.amount
    %td
    %td
