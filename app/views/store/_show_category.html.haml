.canvas
  %ul= render @products
.list{style: 'display: none'}
  .panel.panel-default
    = render partial: 'products/table', object: @products, as: :products

:coffee
  $('.categories .category').removeClass 'active'
  $('.categories ##{dom_id(@category)}').addClass 'active'
  $('.categories').show()
  $('.navbar-form').show()
  $('.search-panel').hide()
  $('.product-detail').hide()
  $('.products').show()

  if $(window).isSmall()
    $(window).scrollTo $('.products'), 300, offset: -70
