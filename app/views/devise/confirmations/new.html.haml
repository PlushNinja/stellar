#static-wrap
  .content
    = bootstrap_devise_error_messages!
    .row
      .col-sm-offset-3.col-sm-6
        .panel.panel-default
          .panel-heading
            %h4.panel-title= t('.resend_confirmation_instructions', default: 'Resend confirmation instructions')
          .panel-body
            = form_for(resource, as: resource_name, url: confirmation_path(resource_name),
                html: {method: :post, role: "form"}) do |f|
              .form-group
                = f.label :email
                = f.email_field :email, autofocus: true, class: "form-control"
              = f.submit t('.resend_confirmation_instructions', default: 'Resend confirmation instructions'), class: "btn btn-primary"

        = render "devise/shared/links"
