- meta_tags_for(@product)

#category-banner-wrap
  = render partial: 'category_banner'

#store-wrap
  .store-sections
    #categories-wrap
      .categories.hidden-print
        %ul= render @categories

    #search-panel-wrap
      .search-panel{style: 'display: none'}

    #products-wrap
      .products{style: 'display: none'}

    #product-detail-wrap
      .product-detail
        = render partial: 'products/product_detail', object: @product, as: :product

:coffee
  jQuery ->
    if $(window).isSmall()
      $(window).scrollTo $('.product-detail'), 300, offset: -70
