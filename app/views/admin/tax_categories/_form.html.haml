= bootstrap_form_for [:admin, @tax_category], layout: :horizontal,
    label_col: 'col-sm-4', control_col: 'col-sm-8' do |f|
  .panel.panel-default
    .panel-body
      %fieldset{disabled: locked}
        = f.text_field :name, required: true
        = f.text_field :rate, append: '%', class: 'text-right', required: true
        = f.form_group do
          = f.check_box :included_in_retail
      - unless locked
        %fieldset.actions.fixed
          .container
            = f.primary
