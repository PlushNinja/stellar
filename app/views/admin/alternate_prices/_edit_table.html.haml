.table-responsive
  %table.table.table-striped.table-hover.table-loose
    %thead
      %tr
        %th.col-xs-3= col(AlternatePrice, :pricing_group_id)
        %th.col-xs-3.text-right= col(AlternatePrice, :retail_price)
        %th.col-xs-3.text-right= col(AlternatePrice, :markup_percent)
        %th.col-xs-3.text-right= col(AlternatePrice, :margin_percent)
        %th.actions

    %tbody#alternate-prices-tbody
      = render partial: 'admin/alternate_prices/edit_tbody', object: product, as: :product

.table-responsive
  = form_for [:admin, product, product.alternate_prices.new], remote: true do |f|
    %table.table.table-loose
      %tbody
        %tr
          %td.col-xs-3
            = f.select :pricing_group_id, current_store.pricing_groups.map { |p| [p.to_s, p.id] }, {}, {class: 'form-control selectize'}
          %td.col-xs-3= f.text_field :retail_price, placeholder: col(AlternatePrice, :retail_price), class: 'form-control text-right'
          %td.col-xs-3= f.text_field :markup_percent, placeholder: col(AlternatePrice, :markup_percent), disabled: true, class: 'form-control text-right'
          %td.col-xs-3= f.text_field :margin_percent, placeholder: col(AlternatePrice, :margin_percent), disabled: true, class: 'form-control text-right'
          %td.actions
            = f.button class: 'btn btn-default' do
              = icon('check')
