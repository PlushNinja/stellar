%fieldset
  = f.range_field :min_width, min: 40, max: 600, step: 5
  = f.range_field :gutter, min: 0, max: 50, step: 1
  .form-group
    = f.label col(Segment, :image_sizing), class: 'control-label'
    .btn-group.btn-group-justified.btn-group-sm{data: {toggle: 'buttons'}}
      - Segment.image_sizing_options.each do |title, size|
        %label.btn.btn-default{class: segment.image_sizing == size && 'active'}
          = f.radio_button_without_bootstrap :image_sizing, size
          = title
  = f.form_group do
    = f.check_box :lightbox
  = f.form_group do
    = f.check_box :thumbnails
  = f.form_group do
    = f.check_box :masonry

:coffee
  $('#segment_min_width').nouislider()
  $('#segment_gutter').nouislider()
