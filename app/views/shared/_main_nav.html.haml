.container
  .navbar-header
    = link_to branding(current_store), root_url(host: (current_hostname.domain_hostname || current_hostname).fqdn), class: 'navbar-brand'
  .navbar-body
    - unless current_store.detach_menu?
      %ul.nav.navbar-nav.navbar-left.responsive
        = render partial: @header.children.live, locals: {navmenu: false}
      %ul.nav.navbar-nav.navbar-right.responsive.aux-nav
        = yield :auxiliary_nav
    #navbar-lookup.collapse
      = render partial: 'shared/lookup'
  .navbar-charms
    %ul.nav.navbar-nav.navbar-left
      = render partial: 'shared/navbar_charms'
      - if user_signed_in? && !guest?
        %li.dropdown.hidden-xs
          = dropdown_toggle do
            = bootstrap_label(current_group, icon: 'user', text: '')
            = current_user.name.split.first
            %span.caret
          %ul.dropdown-menu.dropdown-menu-right{role: 'menu'}
            - if can_manage?
              = render partial: 'shared/admin_menu'
            - if group_delegate?
              = render partial: 'shared/group_menu'
            = render partial: 'shared/user_menu'
      - else
        %li.lg.hidden-xs
          = link_to icon('sign-in'), new_user_session_path
    = render partial: 'shared/offcanvas_toggle'
