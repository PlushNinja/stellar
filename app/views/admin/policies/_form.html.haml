= bootstrap_form_for [:admin, @policy] do |f|
  .panel.panel-default
    .panel-body
      %fieldset{disabled: locked}
        = f.text_field :title
        = f.form_group do
          = f.check_box :mandatory
        ~ f.text_area :content
      - unless locked
        %fieldset.actions.fixed
          .container
            = f.primary

:coffee
  $('#policy_content').summernote
    lang: "#{t('culture')}"
    toolbar: [
      ['para', ['style', 'ul', 'ol', 'paragraph']]
      ['font', ['bold', 'italic', 'clear']]
    ]
    dialogsFade: true
