/*
 * Theme specific styles
 */

$brand-primary: #6f2a7a;
$navbar-default-link-hover-bg: transparent;
$navbar-default-link-active-bg: transparent;
$navbar-default-link-active-color: #000;
$body-bg: #fdfdfd;

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

#offcanvas-wrap > #canvas-wrap {
  padding-top: 80px;
}

#main-nav {
  @include box-shadow(0 0 24px 0 rgba(0,0,0,0.333));
  font-size: $font-size-small;
  font-weight: 500;

  > .container {
    padding-top: 15px;    // padding the container only,
    padding-bottom: 15px; // not the contained elements

    .navbar-brand {
      padding-top: 0;
      padding-bottom: 0;

      img {
        max-height: 50px;
        margin: 0;
      }
    }

    .navbar-nav {
      > li {
        margin-top: -15px;  // matches container padding
        padding-top: 15px;

        &.active:before {
          content: '';
          position: absolute;
          left: 15px;
          right: 15px;
          bottom: 10px;
          border-bottom: 3px solid $brand-primary;
        }
      }
    }
    #navbar-search .form-control {
      @extend .input-sm;
      max-width: 120px;
    }
  }

  .navbar-toggle {
    color: $navbar-inverse-link-color;
  }
}

/*
  as the navbar collapses on extra small screens, the navbar is thinned,
  logo shrunk, and the navbar items revert to default styles
*/
@media (max-width: $screen-sm-min) {
  #offcanvas-wrap > #canvas-wrap {
    padding-top: 70px;
  }

  #main-nav {
    > .container {
      padding-top: 10px;
      padding-bottom: 10px;

      .navbar-brand img {
        max-height: 30px;
        margin-top: 10px;
      }

      .navbar-nav {
        > li {
          margin-top: 0;
          padding-top: 0;

          &.active { background: $brand-primary; }
        }
      }
    }
  }
}

#static-wrap {
  .container {
    margin-top: 20px;

    > .page-header { margin-top: 0; }
  }

  .list-group-item .price {
    float: right;
    font-weight: 500;
  }
  .table .price {
    font-weight: 500;
  }

  .drop-cap {
    float: left;
    margin-right: 15px;
    margin-bottom: -5px;
    font-size: 3em;
    font-weight: 500;
    line-height: 1;
    letter-spacing: -0.2em;
  }

  .carousel {
    margin-bottom: 40px;

    .carousel-inner {
      .item {
        img {
          display: block;
          width: 100%;
        }
        .carousel-caption {
          padding: 10px 10px 40px;
          border-radius: 10px;
          background-color: rgba(0,0,0,0.5);
        }
      }
    }
  }
}

#search-panel-wrap {}

.footer {
  background-color: #000;
  color: #fff;
  font-size: 0.8em;
  font-weight: 500;

  > .container {
    a { color: #fff; }
  }
}
