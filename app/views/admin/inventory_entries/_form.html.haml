#inventory-entry-form
  = form_for [:admin, @inventory_item, @inventory_item.inventory_entries.build(recorded_at: Date.today)], remote: true do |f|
    .table-responsive
      %table.table.table-loose
        %tbody
          %tr
            %td.col-xs-2
              = f.text_field :recorded_at, class: 'form-control', data: {provide: 'datepicker', 'date-format': 'yyyy-mm-dd', 'date-language': I18n.locale}
            %td.col-xs-2
            %td.col-xs-1
              = f.number_field :on_hand, value: 0, class: 'form-control text-right'
            %td.col-xs-1
              = f.number_field :reserved, value: 0, class: 'form-control text-right'
            %td.col-xs-1
              = f.number_field :pending, value: 0, class: 'form-control text-right'
            %td.col-xs-2
              = f.text_field :value, value: @inventory_item.product.cost_price, placeholder: col(InventoryEntry, :value), class: 'form-control text-right'
            %td.col-xs-2
              = f.text_field :note, class: 'form-control'
            %td.actions
              = f.button t('.submit'), class: 'btn btn-default' do
                = icon('check')
