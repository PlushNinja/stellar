= active_link_to t("store.titles.#{current_store.menu_title}"),
    store_path, wrap_tag: :li,
    active: [['store'], ['index', 'show_category', 'show_product']]
- if current_user && can_shop?
  = active_link_to show_cart_path, wrap_tag: :li, active: :exact do
    = icon('shopping-cart', t('store.show_cart.shopping_cart'))
    = render partial: 'store/cart_badge'
  = active_link_to title(Order, count: 2), orders_path, wrap_tag: :li
