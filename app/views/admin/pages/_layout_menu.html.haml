%li.dropdown.mega-dropdown
  = dropdown_toggle do
    = icon('plus', t('.new_section'))
  %ul.dropdown-menu.mega-dropdown-menu.mega-dropdown-menu-compact
    .container
      .row
        - Section.preset_menu_options.each do |segments, layout|
          %li
            = link_to admin_page_sections_path(@page, params: {section: {layout: layout}, segments: segments}), remote: true, method: :post do
              .page-image
                = image_tag "layouts/#{layout}.svg"
