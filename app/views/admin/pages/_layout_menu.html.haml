%li#layout-menu.dropdown.mega-dropdown
  = dropdown_toggle do
    = icon('plus', t('.new_section'))
  .dropdown-menu.mega-dropdown-menu.mega-dropdown-menu-compact
    .container
      - Section.preset_menu_options.each do |row|
        %ul.row
          - row.each do |layout, name, columns|
            %li
              = link_to admin_page_sections_path(@page, params: {section: {layout: layout}, columns: columns}), remote: true, method: :post do
                .page-image
                  %figure= image_tag "layouts/#{layout}.svg"
                .page-title
                  = name

:coffee
  $('#layout-menu').on 'shown.bs.dropdown', ->
    $('#side-panel').removeClass 'open'
