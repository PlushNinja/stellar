= content_tag_for :tr, product.product_properties do |product_property|
  %td= product_property.property
  %td= product_property.value_with_units
  %td.hidden-print.text-right
    = link_to icon('remove', t('actions.delete')), admin_product_property_path(product_property),
        remote: true, method: :delete, class: 'btn btn-sm btn-danger'
